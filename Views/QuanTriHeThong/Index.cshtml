@model IEnumerable<QuanLyNhanLuc.Models.Entities.MenuQuanTri>

@{
    ViewData["Title"] = "Quản lý Menu";
}

<h1>Quản lý Menu</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>

<div class="card">
