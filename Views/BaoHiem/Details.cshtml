@model QuanLyNhanLuc.Models.ViewModels.BaoHiemVM

<style>
    .info-section {
        margin-bottom: 1.5rem;
    }

    .info-section .title {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .info-section .title h6 {
        margin-bottom: 0;
        color: #0d6efd;
    }

    .info-row {
        display: flex;
        margin-bottom: 0.5rem;
    }

    .info-label {
        width: 150px;
        color: #6c757d;
    }

    .info-value {
        flex: 1;
    }
</style>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a class="text-decoration-none text-secondary" href="/">
                            <i class="bi bi-house-door"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a class="text-decoration-none text-secondary" asp-action="Index">Danh sách bảo hiểm</a>
                    </li>
                    <li class="breadcrumb-item active">Chi tiết bảo hiểm</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="bi bi-pencil me-1"></i>Sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/avatar-default.jpg" class="rounded-circle mb-3" style="width: 100px; height: 100px;">
                    <h5 class="mb-1">@Model.HoTen</h5>
                    <p class="text-muted mb-3">@Model.PhongBan</p>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="info-section">
                        <div class="title">
                            <h6>Bảo hiểm xã hội</h6>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Số sổ BHXH</div>
                            <div class="info-value">@Model.SoBHXH</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Số sổ BHXH cũ</div>
                            <div class="info-value">@Model.SoBHXHCu</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Ngày tham gia</div>
                            <div class="info-value">@Model.NgayThamGia.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Nơi đăng ký BHXH</div>
                            <div class="info-value">@Model.NoiDangKyBHXH</div>
                        </div>
                    </div>

                    <div class="info-section">
                        <div class="title">
                            <h6>Bảo hiểm thất nghiệp</h6>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Ngày tham gia BHTN</div>
                            <div class="info-value">@Model.NgayThamGiaBHTN.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Thời gian đóng BHTN</div>
                            <div class="info-value">@Model.ThoiGianDongBHTN tháng</div>
                        </div>
                    </div>

                    <div class="info-section">
                        <div class="title">
                            <h6>Bảo hiểm y tế</h6>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Số thẻ BHYT</div>
                            <div class="info-value">@Model.SoBHYT</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Ngày cấp thẻ</div>
                            <div class="info-value">@Model.NgayCapThe.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Ngày hết hạn</div>
                            <div class="info-value">@Model.NgayHetHan.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Nơi đăng ký KCB</div>
                            <div class="info-value">@Model.NoiDangKyKCB</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Mã KCB</div>
                            <div class="info-value">@Model.MaKCB</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Mã tỉnh bệnh viện</div>
                            <div class="info-value">@Model.MaTinhBenhVien</div>
                        </div>
                        <div class="info-row">
                            <div class="info-label">Trạng thái thẻ</div>
                            <div class="info-value">@(Model.DaTraTheBHYT ? "Đã trả thẻ BHYT" : "Chưa trả thẻ BHYT")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 