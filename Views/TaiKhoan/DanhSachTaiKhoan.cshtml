@model IEnumerable<QuanLyNhanLuc.Models.Entities.NguoiDung>

@{
    ViewData["Title"] = "Danh sách tài khoản";
}

<h1>Danh sách tài khoản</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td class="text-center">
                    <a asp-action="PhanQuyen" asp-route-id="@user.Id" class="btn btn-sm text-primary"><i class="bi bi-gear-wide-connected"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}