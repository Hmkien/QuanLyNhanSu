<div class="modal fade" id="ModalThemPhongBan" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-plus-circle me-2"></i>Thêm phòng ban mới
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="formThemPhongBan">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">
                                Mã phòng ban <span class="text-danger">*</span>
                            </label>
                            <input type="text" name="MaPhongBan" class="form-control" placeholder="Ví dụ: PB001" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">
                                Tên phòng ban <span class="text-danger">*</span>
                            </label>
                            <input type="text" name="TenPhongBan" class="form-control" placeholder="Ví dụ: Phòng Nhân sự" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Mô tả</label>
                            <textarea name="MoTa" class="form-control" rows="3" placeholder="Nhập mô tả về phòng ban..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Hủy
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
