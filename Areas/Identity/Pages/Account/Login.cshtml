@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/LayoutForSpace.cshtml";
}
<div class="login-container">
    <div class="row">
        <div class="col-md-6 left-section">
            <h5>CÔNG TY CỔ PHẦN TRIỂN KHAI PHẦN MỀM ASIA</h5>
            <img src="/Image/Login.png" alt="Illustration" class="illustration">
            <h3 class="text-primary">HỆ THỐNG QUẢN LÝ NHÂN SỰ</h3>
        </div>
        <div class="col-md-6 right-section card-login">
            <div class="card  p-4 border-0">
                <h3 class="text-primary text-center">Đăng nhập</h3>
                <form id="account" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Tài khoản</label>
                        <input type="text" class="form-control" asp-for="Input.UserName" placeholder="">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input type="password" class="form-control" asp-for="Input.Password" placeholder="">
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label text-primary" asp-for="Input.RememberMe">Ghi nhớ mật
                                khẩu</label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="forgot-password text-primary">Quên
                            mật khẩu</a>
                    </div>
                    <button id ="login-submit" type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                </form>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    body {
        background: linear-gradient(135deg, #ff8c00 0%, #ff6200 100%);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Roboto', sans-serif;
        position: relative;
        overflow: hidden;
    }

    /* Đường cong trên nền */
    body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        clip-path: ellipse(80% 60% at 20% 30%);
        z-index: 0;
    }

    body::after {
        content: '';
        position: absolute;
        bottom: 0;
        right: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        clip-path: ellipse(80% 60% at 80% 70%);
        z-index: 0;
    }

    .login-container {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        max-width: 900px;
        width: 100%;
        z-index: 1;
    }

    .left-section {
        background: #fff;
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .left-section h5 {
        color: #ff6200;
        font-weight: 500;
        font-size: 14px;
        margin-bottom: 10px;
        text-transform: uppercase;
    }

    .left-section h3 {
        color: #333;
        font-weight: 700;
        font-size: 20px;
        margin-bottom: 20px;
    }

    .right-section {
        padding: 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .right-section h3 {
        color: #333;
        font-weight: 700;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        padding: 10px;
        font-size: 14px;
    }

    .form-label {
        font-size: 14px;
        color: #333;
        font-weight: 500;
    }

    .btn-login:hover {
        background: #e55b00;
    }

    .form-check-label {
        color: #666;
        font-size: 14px;
    }

    .illustration {
        max-width: 200px;
        margin-bottom: 20px;
    }

    .card-login {
        box-shadow: -1px 0 10px rgba(79, 75, 78, 0.1),
            -1px 0 20px rgba(60, 63, 63, 0.1);
    }
</style>
