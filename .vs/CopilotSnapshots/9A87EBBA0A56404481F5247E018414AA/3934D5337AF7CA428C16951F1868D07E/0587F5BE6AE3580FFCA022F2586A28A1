<!-- Modal Xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa bảng lương này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" id="deleteConfirmBtn" class="btn btn-danger">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            var deleteId = null;

            // Create
            $("button[data-action='create']").on('click', function() {
                $('#luongModalTitle').text('Thêm bảng lương');
                $('#luongForm')[0].reset();
                $('#luongId').val('');
                $('#heSoLuong').val(1);
                $('#soNgayCong').val(22);
                $('#thang').val(@ViewBag.Thang);
                $('#nam').val(@ViewBag.Nam);
                $('#luongError').hide();
                new bootstrap.Modal(document.getElementById('luongModal')).show();
            });

            // Edit
            $(document).on('click', "button[data-action='edit']", function() {
                var id = $(this).data('id');
                $('#luongModalTitle').text('Chỉnh sửa bảng lương');
                $('#luongError').hide();
                $.get('/Luong/GetBangLuong', { id: id }).done(function(res) {
                    $('#luongId').val(res.id);
                    $('#nhanSuId').val(res.nhanSuId);
                    $('#thang').val(res.thang);
                    $('#nam').val(res.nam);
                    $('#luongCoBan').val(res.luongCoBan);
                    $('#heSoLuong').val(res.heSoLuong);
                    $('#soNgayCong').val(res.soNgayCong);
                    $('#phuCapAnTrua').val(res.phuCapAnTrua);
                    $('#phuCapXangXe').val(res.phuCapXangXe);
                    $('#phuCapDienThoai').val(res.phuCapDienThoai);
                    $('#phuCapKhac').val(res.phuCapKhac);
                    $('#tienThuong').val(res.tienThuong);
                    $('#tienPhat').val(res.tienPhat);
                    $('#tienLamThem').val(res.tienLamThem);
                    $('#khauTruBHXH').val(res.khauTruBHXH);
                    $('#khauTruBHYT').val(res.khauTruBHYT);
                    $('#khauTruBHTN').val(res.khauTruBHTN);
                    $('#khauTruThueNCCT').val(res.khauTruThueNCCT);
                    $('#ghiChu').val(res.ghiChu);
                    new bootstrap.Modal(document.getElementById('luongModal')).show();
                });
            });

            // Save
            $('#luongSaveBtn').on('click', function() {
                var id = $('#luongId').val();
                var url = id ? '/Luong/EditAjax' : '/Luong/CreateAjax';
                $.post(url, $('#luongForm').serialize()).done(function(res) {
                    if (res.success) location.reload();
                    else { $('#luongError').text(res.message).show(); }
                }).fail(function() { alert('Có lỗi xảy ra'); });
            });

            // Delete
            $(document).on('click', "button[data-action='delete']", function() {
                deleteId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });

            $('#deleteConfirmBtn').on('click', function() {
                if (!deleteId) return;
                $.post('/Luong/DeleteAjax', { id: deleteId }).done(function(res) {
                    if (res.success) location.reload();
                    else alert(res.message);
                });
            });

            // Duyet/Thanh toan
            $(document).on('click', "button[data-action='duyet']", function() {
                var id = $(this).data('id');
                var trangThai = $(this).data('trangthai');
                $.post('/Luong/DuyetAjax', { id: id, trangThai: trangThai }).done(function(res) {
                    if (res.success) location.reload();
                    else alert(res.message);
                });
            });

            // Generate
            $("button[data-action='generate']").on('click', function() {
                new bootstrap.Modal(document.getElementById('generateModal')).show();
            });

            $('#generateConfirmBtn').on('click', function() {
                $.post('/Luong/TaoBangLuongThang', {
                    thang: $('#genThang').val(),
                    nam: $('#genNam').val()
                }).done(function(res) {
                    if (res.success) {
                        alert('Đã tạo bảng lương cho ' + res.count + ' nhân viên');
                        location.reload();
                    } else {
                        alert(res.message);
                    }
                });
            });

            // Search
            $('#btnSearch').on('click', function() {
                var thang = $('#filterThang').val();
                var nam = $('#filterNam').val();
                var trangThai = $('#filterTrangThai').val();
                var keyword = $('#filterKeyword').val();
                var url = '/Luong/BangLuong?thang=' + thang + '&nam=' + nam;
                if (trangThai) url += '&trangThai=' + trangThai;
                if (keyword) url += '&keyword=' + encodeURIComponent(keyword);
                window.location.href = url;
            });
        });
    </script>
}
