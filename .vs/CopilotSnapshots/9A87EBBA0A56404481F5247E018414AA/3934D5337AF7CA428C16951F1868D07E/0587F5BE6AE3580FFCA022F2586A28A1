<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th><input type="checkbox"></th>
                <th>STT</th>
                <th>Mã NV</th>
                <th>Họ tên</th>
                <th>Phòng ban</th>
                <th class="text-end">Lương CB</th>
                <th class="text-center">Ngày công</th>
                <th class="text-end">Phụ cấp</th>
                <th class="text-end">Thưởng</th>
                <th class="text-end">Khấu trừ</th>
                <th class="text-end">Thực nhận</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @{ var stt = 1; }
            @foreach (var item in Model)
            {
                var tongPhuCap = (item.PhuCapAnTrua ?? 0) + (item.PhuCapXangXe ?? 0) + (item.PhuCapDienThoai ?? 0) + (item.PhuCapKhac ?? 0);
                <tr>
                    <td class="text-center"><input type="checkbox"></td>
                    <td>@stt</td>
                    <td>@item.MaNhanVien</td>
                    <td>@item.HoTen</td>
                    <td>@item.PhongBan</td>
                    <td class="text-end">@item.LuongCoBan.ToString("N0")</td>
                    <td class="text-center">@item.SoNgayCong</td>
                    <td class="text-end">@tongPhuCap.ToString("N0")</td>
                    <td class="text-end">@((item.TienThuong ?? 0).ToString("N0"))</td>
                    <td class="text-end text-danger">@item.TongKhauTru.ToString("N0")</td>
                    <td class="text-end fw-bold text-success">@item.LuongThucNhan.ToString("N0")</td>
                    <td><span class="status-badge status-@item.TrangThai">@item.TrangThaiText</span></td>
                    <td class="text-center">
                        <button class="btn btn-sm" data-action="view" data-id="@item.Id" title="Xem chi tiết">
                            <i class="fas fa-eye text-dark"></i>
                        </button>
                        @if (item.TrangThai != "DaThanhToan")
                        {
                            <button class="btn btn-sm" data-action="edit" data-id="@item.Id" title="Sửa">
                                <i class="bi bi-pen text-primary"></i>
                            </button>
                        }
                        @if (item.TrangThai == "ChuaDuyet")
                        {
                            <button class="btn btn-sm" data-action="duyet" data-id="@item.Id" data-trangthai="DaDuyet" title="Duyệt">
                                <i class="bi bi-check2-circle text-success"></i>
                            </button>
                            <button class="btn btn-sm" data-action="delete" data-id="@item.Id" title="Xóa">
                                <i class="bi bi-trash text-danger"></i>
                            </button>
                        }
                        @if (item.TrangThai == "DaDuyet")
                        {
                            <button class="btn btn-sm" data-action="duyet" data-id="@item.Id" data-trangthai="DaThanhToan" title="Thanh toán">
                                <i class="bi bi-cash-coin text-warning"></i>
                            </button>
                        }
                    </td>
                </tr>
                stt++;
            }
        </tbody>
        <tfoot>
            <tr class="fw-bold bg-light">
                <td colspan="5" class="text-end">Tổng cộng:</td>
                <td class="text-end">@Model.Sum(x => x.LuongCoBan).ToString("N0")</td>
                <td></td>
                <td class="text-end">@Model.Sum(x => (x.PhuCapAnTrua ?? 0) + (x.PhuCapXangXe ?? 0) + (x.PhuCapDienThoai ?? 0) + (x.PhuCapKhac ?? 0)).ToString("N0")</td>
                <td class="text-end">@Model.Sum(x => x.TienThuong ?? 0).ToString("N0")</td>
                <td class="text-end text-danger">@Model.Sum(x => x.TongKhauTru).ToString("N0")</td>
                <td class="text-end text-success">@Model.Sum(x => x.LuongThucNhan).ToString("N0")</td>
                <td colspan="2"></td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="d-flex justify-content-between align-items-center">
    <span class="text-primary">Tổng số bản ghi: @Model.Count()</span>
</div>

