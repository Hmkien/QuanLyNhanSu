<!-- Modal Xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa quyết định này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" id="deleteConfirmBtn" class="btn btn-danger">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            var deleteId = null;
            var duyetId = null;

            // Create
            $("button[data-action='create']").on('click', function() {
                $('#ktkModalTitle').text('Thêm khen thưởng/kỷ luật');
                $('#ktkForm')[0].reset();
                $('#ktkId').val('');
                $('#ktkError').hide();
                new bootstrap.Modal(document.getElementById('ktkModal')).show();
            });

            // Edit
            $(document).on('click', "button[data-action='edit']", function() {
                var id = $(this).data('id');
                $('#ktkModalTitle').text('Chỉnh sửa quyết định');
                $('#ktkError').hide();
                $.get('/KhenThuongKyLuat/GetKhenThuongKyLuat', { id: id }).done(function(res) {
                    $('#ktkId').val(res.id);
                    $('#nhanSuId').val(res.nhanSuId);
                    $('#loai').val(res.loai);
                    $('#hinhThuc').val(res.hinhThuc);
                    $('#soTien').val(res.soTien);
                    $('#ngayQuyetDinh').val(res.ngayQuyetDinh);
                    $('#ngayHieuLuc').val(res.ngayHieuLuc);
                    $('#lyDo').val(res.lyDo);
                    $('#ghiChu').val(res.ghiChu);
                    new bootstrap.Modal(document.getElementById('ktkModal')).show();
                });
            });

            // Save
            $('#ktkSaveBtn').on('click', function() {
                var id = $('#ktkId').val();
                var url = id ? '/KhenThuongKyLuat/EditAjax' : '/KhenThuongKyLuat/CreateAjax';
                $.post(url, $('#ktkForm').serialize()).done(function(res) {
                    if (res.success) location.reload();
                    else { $('#ktkError').text(res.message).show(); }
                }).fail(function() { alert('Có lỗi xảy ra'); });
            });

            // Duyet
            $(document).on('click', "button[data-action='duyet']", function() {
                duyetId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('duyetModal')).show();
            });

            $('#duyetConfirmBtn').on('click', function() {
                if (!duyetId) return;
                $.post('/KhenThuongKyLuat/DuyetAjax', {
                    id: duyetId,
                    trangThai: $('#duyetTrangThai').val(),
                    ghiChu: $('#duyetGhiChu').val()
                }).done(function(res) {
                    if (res.success) location.reload();
                    else alert(res.message);
                });
            });

            // Delete
            $(document).on('click', "button[data-action='delete']", function() {
                deleteId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });

            $('#deleteConfirmBtn').on('click', function() {
                if (!deleteId) return;
                $.post('/KhenThuongKyLuat/DeleteAjax', { id: deleteId }).done(function(res) {
                    if (res.success) location.reload();
                    else alert(res.message);
                });
            });

            // Search
            $('#btnSearch').on('click', function() {
                var trangThai = $('#filterTrangThai').val();
                var keyword = $('#filterKeyword').val();
                var url = '/KhenThuongKyLuat?';
                if (trangThai) url += 'trangThai=' + trangThai + '&';
                if (keyword) url += 'keyword=' + encodeURIComponent(keyword);
                window.location.href = url;
            });
        });
    </script>
}
