<!-- Modal Quên mật khẩu -->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="forgotPasswordModalLabel">
                    <i class="bi bi-key me-2"></i>Quên mật khẩu
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div id="forgotStep1">
                    <p class="text-muted mb-4">Nhập địa chỉ email đã đăng ký để nhận link đặt lại mật khẩu.</p>
                    <div class="mb-3">
                        <label class="form-label">Địa chỉ email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" id="forgotEmail" placeholder="example@email.com" required>
                        </div>
                        <div class="invalid-feedback" id="forgotEmailError"></div>
                    </div>
                </div>
                <div id="forgotStep2" style="display: none;">
                    <div class="text-center">
                        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                        <h5 class="mt-3 text-success">Email đã được gửi!</h5>
                        <p class="text-muted">Vui lòng kiểm tra hộp thư của bạn và làm theo hướng dẫn để đặt lại mật khẩu.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer" id="forgotFooter">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="sendResetEmail">
                    <i class="bi bi-send me-1"></i>Gửi yêu cầu
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function() {
            // Toggle password visibility
            $('#togglePassword').on('click', function() {
                var input = $('#passwordInput');
                var icon = $('#toggleIcon');
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('bi-eye').addClass('bi-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('bi-eye-slash').addClass('bi-eye');
                }
            });

            // Handle forgot password
            $('#sendResetEmail').on('click', function() {
                var email = $('#forgotEmail').val();
                if (!email || !email.includes('@@')) {
                    $('#forgotEmail').addClass('is-invalid');
                    $('#forgotEmailError').text('Vui lòng nhập email hợp lệ').show();
                    return;
                }
                
                var btn = $(this);
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-1"></span>Đang gửi...');
                
                // Giả lập gửi email (trong thực tế sẽ gọi API)
                $.post('/Identity/Account/ForgotPassword', { Email: email })
                    .done(function() {
                        $('#forgotStep1').hide();
                        $('#forgotStep2').show();
                        $('#forgotFooter').html('<button type="button" class="btn btn-primary" data-bs-dismiss="modal">Đóng</button>');
                    })
                    .fail(function() {
                        $('#forgotStep1').hide();
                        $('#forgotStep2').show();
                        $('#forgotFooter').html('<button type="button" class="btn btn-primary" data-bs-dismiss="modal">Đóng</button>');
                    });
            });

            // Reset modal when closed
            $('#forgotPasswordModal').on('hidden.bs.modal', function() {
                $('#forgotStep1').show();
                $('#forgotStep2').hide();
                $('#forgotEmail').val('').removeClass('is-invalid');
                $('#forgotFooter').html(
                    '<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>' +
                    '<button type="button" class="btn btn-primary" id="sendResetEmail"><i class="bi bi-send me-1"></i>Gửi yêu cầu</button>'
                );
            });
        });
    </script>
}
