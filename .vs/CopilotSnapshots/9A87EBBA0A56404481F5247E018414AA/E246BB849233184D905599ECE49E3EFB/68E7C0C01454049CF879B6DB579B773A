@model IEnumerable<QuanLyNhanLuc.Models.Entities.Department>
@using QuanLyNhanLuc.Models.Enums

@{
    ViewData["Title"] = "Phòng ban";
}

<style>
    .status-badge { padding: 4px 8px; border-radius: 12px; font-size: 12px; }
    .status-approved { background-color: #d4edda; color: #155724; }
    .status-pending { background-color: #fff3cd; color: #856404; }
    .status-rejected { background-color: #f8d7da; color: #721c24; }
</style>

<h3>Phòng ban</h3>

<p>
    <button class="btn btn-primary" data-action="create"><i class="fas fa-plus me-1"></i>Thêm mới</button>
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên phòng ban</th>
            <th>Mô tả</th>
            <th>Trạng thái</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{ var stt = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>@stt</td>
                <td>@item.TenPhongBan</td>
                <td>@item.MoTa</td>
                <td>
                    @if (item.Status == Status.Approved)
                    {
                        <span class="status-badge status-approved">Đã duyệt</span>
                    }
                    else if (item.Status == Status.Pending)
                    {
                        <span class="status-badge status-pending">Chờ duyệt</span>
                    }
                    else
                    {
                        <span class="status-badge status-rejected">Huỷ duyệt</span>
                    }
                </td>
                <td class="text-center">
                    @if (item.Status == Status.Approved)
                    {
                        <button class="btn btn-sm" data-action="reject" data-id="@item.Id" title="Huỷ duyệt">
                            <i class="bi bi-x-circle text-warning"></i>
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-sm" data-action="approve" data-id="@item.Id" title="Duyệt">
                            <i class="bi bi-check-circle text-success"></i>
                        </button>
                        <button class="btn btn-sm" data-action="edit" data-id="@item.Id" title="Sửa">
                            <i class="fa-solid fa-pen-to-square text-primary"></i>
                        </button>
                        <button class="btn btn-sm" data-action="delete" data-id="@item.Id" title="Xóa">
                            <i class="fa-solid fa-trash text-danger"></i>
                        </button>
                    }
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-primary">Tổng số bản ghi: @(ViewBag.TotalItems ?? Model.Count())</span>
    @if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
    {
        <nav>
            <ul class="pagination pagination-sm mb-0">
                @{ int current = ViewBag.CurrentPage; int total = ViewBag.TotalPages; }
                <li class="page-item @(current == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = current - 1, pageSize = ViewBag.PageSize })">«</a>
                </li>
                @for (int i = 1; i <= total; i++)
                {
                    <li class="page-item @(i == current ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                    </li>
                }
                <li class="page-item @(current == total ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = current + 1, pageSize = ViewBag.PageSize })">»</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Modals -->
<div class="modal fade" id="depModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="depModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="depForm">
                    <input type="hidden" id="depId" name="id" />
                    <div class="mb-3">
                        <label class="form-label">Tên phòng ban</label>
                        <input id="depName" name="tenPhongBan" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea id="depMoTa" name="moTa" class="form-control"></textarea>
                    </div>
                    <div class="text-danger" id="depError" style="display:none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="depSaveBtn" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="depDeleteModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa phòng ban</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa phòng ban này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" id="depDeleteConfirmBtn" class="btn btn-danger">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            var deleteId = null;

            // Create
            $("button[data-action='create']").on('click', function() {
                $('#depModalTitle').text('Thêm phòng ban');
                $('#depId').val('');
                $('#depName').val('');
                $('#depMoTa').val('');
                $('#depError').hide();
                new bootstrap.Modal(document.getElementById('depModal')).show();
            });

            // Edit
            $(document).on('click', "button[data-action='edit']", function() {
                var id = $(this).data('id');
                $('#depModalTitle').text('Chỉnh sửa phòng ban');
                $('#depError').hide();
                $.get('/Department/GetDepartment', { id: id }).done(function(res) {
                    $('#depId').val(res.id);
                    $('#depName').val(res.ten);
                    $('#depMoTa').val(res.mota);
                    new bootstrap.Modal(document.getElementById('depModal')).show();
                });
            });

            // Save
            $('#depSaveBtn').on('click', function() {
                var id = $('#depId').val();
                var name = $('#depName').val();
                var mota = $('#depMoTa').val();
                var url = id ? '/Department/EditAjax' : '/Department/CreateAjax';
                var data = id ? { id: id, tenPhongBan: name, moTa: mota } : { tenPhongBan: name, moTa: mota };
                $.post(url, data).done(function(res) {
                    if (res.success) location.reload(); else { $('#depError').text(res.message).show(); }
                }).fail(function() { alert('Có lỗi xảy ra'); });
            });

            // Delete
            $(document).on('click', "button[data-action='delete']", function() {
                deleteId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('depDeleteModal')).show();
            });
            $('#depDeleteConfirmBtn').on('click', function() {
                if (!deleteId) return;
                $.post('/Department/DeleteAjax', { id: deleteId }).done(function(res) {
                    if (res.success) location.reload(); else alert(res.message);
                });
            });

            // Approve
            $(document).on('click', "button[data-action='approve']", function() {
                var id = $(this).data('id');
                if (confirm('Bạn có chắc chắn muốn duyệt phòng ban này?')) {
                    $.post('/Department/ApproveAjax', { id: id }).done(function(res) {
                        if (res.success) location.reload();
                        else alert(res.message);
                    });
                }
            });

            // Reject
            $(document).on('click', "button[data-action='reject']", function() {
                var id = $(this).data('id');
                if (confirm('Bạn có chắc chắn muốn huỷ duyệt phòng ban này?')) {
                    $.post('/Department/RejectAjax', { id: id }).done(function(res) {
                        if (res.success) location.reload();
                        else alert(res.message);
                    });
                }
            });
        });
    </script>
}
