@model IEnumerable<QuanLyNhanLuc.Models.Entities.ChucVu>

@{
    ViewData["Title"] = "Index";
}

<h3>Danh sách chức vụ</h3>

<p>
    <a asp-action="Create" class="btn btn-primary" data-action="create">Thêm mới</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenChucVu)
            </th>
          
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenChucVu)
            </td>
            <td class="text-center">
                <a asp-action="Edit" class="btn text-primary" asp-route-id="@item.Id" data-action="edit" data-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                <a asp-action="Delete" class="btn text-danger" asp-route-id="@item.Id" data-action="delete" data-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-primary">Tổng số bản ghi: @(ViewBag.TotalItems ?? Model.Count())</span>
    @if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
    {
        <nav>
            <ul class="pagination pagination-sm mb-0">
                @{ int current = ViewBag.CurrentPage; int total = ViewBag.TotalPages; }
                <li class="page-item @(current == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = current - 1, pageSize = ViewBag.PageSize })">«</a>
                </li>
                @for (int i = 1; i <= total; i++)
                {
                    <li class="page-item @(i == current ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                    </li>
                }
                <li class="page-item @(current == total ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = current + 1, pageSize = ViewBag.PageSize })">»</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Modals -->
<div class="modal fade" id="chucVuModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="chucVuModalTitle"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="chucVuForm">
                    <input type="hidden" id="chucVuId" name="id" />
                    <div class="mb-3">
                        <label class="form-label">Tên chức vụ</label>
                        <input id="chucVuName" name="tenChucVu" class="form-control" />
                        <div class="text-danger" id="chucVuError" style="display:none"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="chucVuSaveBtn" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="chucVuDeleteModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xóa chức vụ</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa chức vụ này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" id="chucVuDeleteConfirmBtn" class="btn btn-danger">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            // Create
            $("a[data-action='create']").on('click', function(e) {
                e.preventDefault();
                $('#chucVuModalTitle').text('Thêm chức vụ');
                $('#chucVuId').val('');
                $('#chucVuName').val('');
                $('#chucVuError').hide();
                new bootstrap.Modal(document.getElementById('chucVuModal')).show();
            });

            // Edit
            $("a[data-action='edit']").on('click', function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $('#chucVuModalTitle').text('Chỉnh sửa chức vụ');
                $('#chucVuError').hide();
                $.get('/ChucVu/GetChucVu', { id: id }).done(function(res) {
                    $('#chucVuId').val(res.id);
                    $('#chucVuName').val(res.ten);
                    new bootstrap.Modal(document.getElementById('chucVuModal')).show();
                });
            });

            // Save (create/edit)
            $('#chucVuSaveBtn').on('click', function() {
                var id = $('#chucVuId').val();
                var name = $('#chucVuName').val();
                var url = id ? '/ChucVu/EditAjax' : '/ChucVu/CreateAjax';
                var data = id ? { id: id, tenChucVu: name } : { tenChucVu: name };
                $.post(url, data).done(function(res) {
                    if (res.success) location.reload(); else { $('#chucVuError').text(res.message).show(); }
                }).fail(function() { alert('Có lỗi xảy ra'); });
            });

            // Delete
            var deleteId = null;
            $("a[data-action='delete']").on('click', function(e) {
                e.preventDefault();
                deleteId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('chucVuDeleteModal')).show();
            });
            $('#chucVuDeleteConfirmBtn').on('click', function() {
                if (!deleteId) return;
                $.post('/ChucVu/DeleteAjax', { id: deleteId }).done(function(res) {
                    if (res.success) location.reload(); else alert(res.message);
                });
            });
        });
    </script>
}
