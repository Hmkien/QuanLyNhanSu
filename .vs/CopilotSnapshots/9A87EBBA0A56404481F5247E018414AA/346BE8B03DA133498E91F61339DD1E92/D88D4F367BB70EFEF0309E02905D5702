

using Microsoft.AspNetCore.Mvc;
using Microsoft.EntityFrameworkCore;
using QuanLyNhanLuc.Data;
using QuanLyNhanLuc.Models.Entities;
using QuanLyNhanLuc.Models.Enums;

namespace QuanLyNhanLuc.Controllers
{
    public class DepartmentController : Controller
    {
        private readonly QLNLContext _context;

        public DepartmentController(QLNLContext context)
        {
            _context = context;
        }

        public async Task<IActionResult> Index(int page = 1, int pageSize = 10)
        {
            var query = _context.Departments.OrderBy(x => x.TenPhongBan).AsNoTracking();
            var total = await query.CountAsync();
            var items = await query.Skip((page - 1) * pageSize).Take(pageSize).ToListAsync();

            ViewBag.TotalPages = (int)Math.Ceiling(total / (double)pageSize);
            ViewBag.TotalItems = total;
            ViewBag.CurrentPage = page;
            ViewBag.PageSize = pageSize;

            return View(items);
        }

        // AJAX endpoints for modal operations
        [HttpGet]
        public async Task<IActionResult> GetDepartment(Guid id)
        {
            var dep = await _context.Departments.FindAsync(id);
            if (dep == null) return NotFound();
            return Json(new { 
                id = dep.Id, 
                ten = dep.TenPhongBan, 
                mota = dep.MoTa,
                status = (int)dep.Status
            });
        }

        [HttpPost]
        public async Task<IActionResult> CreateAjax([FromForm] string tenPhongBan, [FromForm] string? moTa)
        {
            if (string.IsNullOrWhiteSpace(tenPhongBan)) 
                return Json(new { success = false, message = "Tên phòng ban không được để trống" });
            
            var department = new Department
            {
                TenPhongBan = tenPhongBan,
                MoTa = moTa ?? string.Empty,
                Status = Status.Pending
            };
            _context.Departments.Add(department);
            await _context.SaveChangesAsync();
            return Json(new { success = true });
        }

        [HttpPost]
        public async Task<IActionResult> EditAjax([FromForm] Guid id, [FromForm] string tenPhongBan, [FromForm] string? moTa)
        {
            var dep = await _context.Departments.FindAsync(id);
            if (dep == null) 
                return Json(new { success = false, message = "Phòng ban không tồn tại" });
            
            if (dep.Status == Status.Approved)
                return Json(new { success = false, message = "Không thể sửa phòng ban đã được duyệt" });

            dep.TenPhongBan = tenPhongBan;
            dep.MoTa = moTa ?? string.Empty;
            await _context.SaveChangesAsync();
            return Json(new { success = true });
        }

        [HttpPost]
        public async Task<IActionResult> DeleteAjax([FromForm] Guid id)
        {
            var dep = await _context.Departments.FindAsync(id);
            if (dep == null) 
                return Json(new { success = false, message = "Phòng ban không tồn tại" });

            _context.Departments.Remove(dep);
            await _context.SaveChangesAsync();
            return Json(new { success = true });
        }

        [HttpPost]
        public async Task<IActionResult> ApproveAjax([FromForm] Guid id)
        {
            var dep = await _context.Departments.FindAsync(id);
            if (dep == null) 
                return Json(new { success = false, message = "Phòng ban không tồn tại" });

            dep.Status = Status.Approved;
            await _context.SaveChangesAsync();
            return Json(new { success = true });
        }

        [HttpPost]
        public async Task<IActionResult> RejectAjax([FromForm] Guid id)
        {
            var dep = await _context.Departments.FindAsync(id);
            if (dep == null) 
                return Json(new { success = false, message = "Phòng ban không tồn tại" });

            dep.Status = Status.Rejected;
            await _context.SaveChangesAsync();
            return Json(new { success = true });
        }
    }
}
