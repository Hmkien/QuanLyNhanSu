@model IEnumerable<QuanLyNhanLuc.Models.Entities.NguoiDung>

@{
    ViewData["Title"] = "Danh sách tài khoản";
}

<div class="row mb-3 align-items-center">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb custom-breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a class="text-decoration-none text-secondary"><i class="bi bi-house-door"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a class="text-decoration-none text-secondary">Quản trị hệ thống</a>
                </li>
                <li class="breadcrumb-item active text-primary" aria-current="page">Tài khoản</li>
            </ol>
        </nav>
    </div>
</div>

<div class="d-flex justify-content-between gap-4 mb-4">
    <h2 class="text-primary">Danh sách tài khoản</h2>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên đăng nhập</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @{ var stt = 1; }
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td class="text-center">
                            <button class="btn btn-sm" data-action="assign-role" data-id="@user.Id" title="Phân quyền">
                                <i class="bi bi-gear-wide-connected text-primary"></i>
                            </button>
                        </td>
                    </tr>
                    stt++;
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-primary">Tổng số bản ghi: @(ViewBag.TotalItems ?? Model.Count())</span>
    @if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
    {
        <nav>
            <ul class="pagination pagination-sm mb-0">
                @{ int current = ViewBag.CurrentPage; int total = ViewBag.TotalPages; }
                <li class="page-item @(current == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("DanhSachTaiKhoan", new { page = current - 1, pageSize = ViewBag.PageSize })">«</a>
                </li>
                @for (int i = 1; i <= total; i++)
                {
                    <li class="page-item @(i == current ? "active" : "")">
                        <a class="page-link" href="@Url.Action("DanhSachTaiKhoan", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                    </li>
                }
                <li class="page-item @(current == total ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("DanhSachTaiKhoan", new { page = current + 1, pageSize = ViewBag.PageSize })">»</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Modal Phân quyền -->
<div class="modal fade" id="assignRoleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-shield-check me-2"></i>Phân quyền vai trò</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="assignRoleForm">
                    <input type="hidden" id="userId" name="userId" />
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tài khoản:</label>
                        <p id="userInfo" class="mb-0 text-muted"></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Chọn vai trò:</label>
                        <div id="roleCheckboxes" class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                            <!-- Roles will be loaded here -->
                        </div>
                    </div>
                    <div class="text-danger" id="assignRoleError" style="display:none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="assignRoleSaveBtn" class="btn btn-primary">
                    <i class="bi bi-check2 me-1"></i>Lưu
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            // Open assign role modal
            $(document).on('click', "button[data-action='assign-role']", function() {
                var userId = $(this).data('id');
                $('#assignRoleError').hide();
                
                $.get('/TaiKhoan/GetUserRoles', { id: userId }).done(function(res) {
                    $('#userId').val(res.userId);
                    $('#userInfo').html('<strong>' + res.userName + '</strong> (' + res.email + ')');
                    
                    var html = '';
                    res.allRoles.forEach(function(role) {
                        var checked = res.selectedRoles.includes(role) ? 'checked' : '';
                        html += '<div class="form-check mb-2">';
                        html += '<input class="form-check-input" type="checkbox" name="selectedRoles" value="' + role + '" id="role_' + role + '" ' + checked + '>';
                        html += '<label class="form-check-label" for="role_' + role + '">' + role + '</label>';
                        html += '</div>';
                    });
                    
                    if (res.allRoles.length === 0) {
                        html = '<p class="text-muted mb-0">Chưa có vai trò nào được tạo.</p>';
                    }
                    
                    $('#roleCheckboxes').html(html);
                    new bootstrap.Modal(document.getElementById('assignRoleModal')).show();
                }).fail(function() {
                    alert('Có lỗi khi tải thông tin người dùng');
                });
            });

            // Save roles
            $('#assignRoleSaveBtn').on('click', function() {
                var userId = $('#userId').val();
                var selectedRoles = [];
                $('input[name="selectedRoles"]:checked').each(function() {
                    selectedRoles.push($(this).val());
                });
                
                $.post('/TaiKhoan/AssignRolesAjax', { 
                    userId: userId, 
                    selectedRoles: selectedRoles 
                }).done(function(res) {
                    if (res.success) {
                        bootstrap.Modal.getInstance(document.getElementById('assignRoleModal')).hide();
                        location.reload();
                    } else {
                        $('#assignRoleError').text(res.message).show();
                    }
                }).fail(function() {
                    alert('Có lỗi xảy ra');
                });
            });
        });
    </script>
}