<!-- Modal Xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa thủ tục này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" id="deleteConfirmBtn" class="btn btn-danger">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            var deleteId = null;
            var duyetId = null;

            // Create
            $("button[data-action='create']").on('click', function() {
                $('#thuTucModalTitle').text('Thêm thủ tục hành chính');
                $('#thuTucForm')[0].reset();
                $('#thuTucId').val('');
                $('#thuTucError').hide();
                new bootstrap.Modal(document.getElementById('thuTucModal')).show();
            });

            // Edit
            $(document).on('click', "button[data-action='edit']", function() {
                var id = $(this).data('id');
                $('#thuTucModalTitle').text('Chỉnh sửa thủ tục');
                $('#thuTucError').hide();
                $.get('/ThuTucHanhChinh/GetThuTuc', { id: id }).done(function(res) {
                    $('#thuTucId').val(res.id);
                    $('#nhanSuId').val(res.nhanSuId);
                    $('#loaiThuTuc').val(res.loaiThuTuc);
                    $('#ngayBatDau').val(res.ngayBatDau);
                    $('#ngayKetThuc').val(res.ngayKetThuc);
                    $('#soNgay').val(res.soNgay);
                    $('#lyDo').val(res.lyDo);
                    $('#ghiChu').val(res.ghiChu);
                    new bootstrap.Modal(document.getElementById('thuTucModal')).show();
                });
            });

            // Save
            $('#thuTucSaveBtn').on('click', function() {
                var id = $('#thuTucId').val();
                var url = id ? '/ThuTucHanhChinh/EditAjax' : '/ThuTucHanhChinh/CreateAjax';
                $.post(url, $('#thuTucForm').serialize()).done(function(res) {
                    if (res.success) location.reload();
                    else { $('#thuTucError').text(res.message).show(); }
                }).fail(function() { alert('Có lỗi xảy ra'); });
            });

            // Duyet
            $(document).on('click', "button[data-action='duyet']", function() {
                duyetId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('duyetModal')).show();
            });

            $('#duyetConfirmBtn').on('click', function() {
                if (!duyetId) return;
                $.post('/ThuTucHanhChinh/DuyetAjax', {
                    id: duyetId,
                    trangThai: $('#duyetTrangThai').val(),
                    ghiChu: $('#duyetGhiChu').val()
                }).done(function(res) {
                    if (res.success) location.reload();
                    else alert(res.message);
                });
            });

            // Delete
            $(document).on('click', "button[data-action='delete']", function() {
                deleteId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });

            $('#deleteConfirmBtn').on('click', function() {
                if (!deleteId) return;
                $.post('/ThuTucHanhChinh/DeleteAjax', { id: deleteId }).done(function(res) {
                    if (res.success) location.reload();
                    else alert(res.message);
                });
            });

            // Search
            $('#btnSearch').on('click', function() {
                var trangThai = $('#filterTrangThai').val();
                var keyword = $('#filterKeyword').val();
                var url = '/ThuTucHanhChinh?';
                if (trangThai) url += 'trangThai=' + trangThai + '&';
                if (keyword) url += 'keyword=' + encodeURIComponent(keyword);
                window.location.href = url;
            });
        });
    </script>
}
