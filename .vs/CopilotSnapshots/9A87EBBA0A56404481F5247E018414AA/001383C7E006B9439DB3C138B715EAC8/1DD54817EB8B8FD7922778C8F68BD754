                    <label class="form-label">Quyết định</label>
                    <select id="duyetTrangThai" class="form-select">
                        <option value="DaDuyet">Duyệt</option>
                        <option value="TuChoi">Từ chối</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Ghi chú</label>
                    <textarea id="duyetGhiChu" class="form-control" rows="3"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="duyetConfirmBtn" class="btn btn-success">Xác nhận</button>
            </div>
        </div>
    </div>
