using System.ComponentModel.DataAnnotations;

namespace QuanLyNhanLuc.Models.ViewModels;

public class HopDongVM
{
    public Guid Id { get; set; }
    
    [Display(Name = "Mã hợp đồng")]
    public string MaHopDong { get; set; } = string.Empty;
    
    public Guid NhanSuId { get; set; }
    
    [Display(Name = "Mã nhân viên")]
    public string MaNhanVien { get; set; } = string.Empty;
    
    [Display(Name = "Họ tên")]
    public string HoTen { get; set; } = string.Empty;
    
    [Display(Name = "Phòng ban")]
    public string PhongBan { get; set; } = string.Empty;
    
    [Display(Name = "Loại hợp đồng")]
    [Required(ErrorMessage = "Vui lòng chọn loại hợp đồng")]
    public string LoaiHopDong { get; set; } = string.Empty;
    
    [Display(Name = "Ngày ký")]
    [Required(ErrorMessage = "Vui lòng nhập ngày ký")]
    [DataType(DataType.Date)]
    public DateTime NgayKy { get; set; }
    
    [Display(Name = "Ngày bắt đầu")]
    [Required(ErrorMessage = "Vui lòng nhập ngày bắt đầu")]
    [DataType(DataType.Date)]
    public DateTime NgayBatDau { get; set; }
    
    [Display(Name = "Ngày kết thúc")]
    [DataType(DataType.Date)]
    public DateTime? NgayKetThuc { get; set; }
    
    [Display(Name = "Lương cơ bản")]
    [Required(ErrorMessage = "Vui lòng nhập lương cơ bản")]
    [DisplayFormat(DataFormatString = "{0:N0}")]
    public decimal LuongCoBan { get; set; }
    
    [Display(Name = "Ghi chú")]
    public string? GhiChu { get; set; }
    
    [Display(Name = "Trạng thái")]
    public string TrangThai { get; set; } = "HieuLuc";
    
    [Display(Name = "Trạng thái")]
    public string TrangThaiText => TrangThai switch
    {
        "HieuLuc" => "Hiệu lực",
        "HetHan" => "Hết hạn",
        "ChamDut" => "Chấm dứt",
        _ => TrangThai
    };
    
    [Display(Name = "Tệp đính kèm")]
    public string? TepDinhKem { get; set; }
}
