                        <p id="detailEmail" class="form-control-plaintext"></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Số điện thoại:</label>
                        <p id="detailPhoneNumber" class="form-control-plaintext"></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Trạng thái:</label>
                        <p id="detailStatus" class="form-control-plaintext"></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mb-3">
                        <label class="form-label fw-bold">Vai trò:</label>
                        <div id="detailRoles" class="border rounded p-2"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Phân quyền -->
<div class="modal fade" id="assignRoleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-shield-check me-2"></i>Phân quyền vai trò</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="assignRoleForm">
                    <input type="hidden" id="roleUserId" name="userId" />
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tài khoản:</label>
                        <p id="roleUserInfo" class="mb-0 text-muted"></p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Chọn vai trò:</label>
                        <div id="roleCheckboxes" class="border rounded p-3" style="max-height: 300px; overflow-y: auto;"></div>
                    </div>
                    <div class="text-danger" id="assignRoleError" style="display:none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="assignRoleSaveBtn" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Sửa thông tin -->
<div class="modal fade" id="editUserModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i>Sửa thông tin tài khoản</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editUserForm">
                    <input type="hidden" id="editUserId" name="userId" />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                            <input id="editUserName" class="form-control" disabled />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email <span class="text-danger">*</span></label>
                            <input id="editEmail" name="email" class="form-control" type="email" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input id="editPhoneNumber" name="phoneNumber" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Trạng thái</label>
                            <select id="editIsActive" name="isActive" class="form-select">
                                <option value="true">Hoạt động</option>
                                <option value="false">Vô hiệu</option>
                            </select>
                        </div>
                    </div>
                    <div class="text-danger" id="editUserError" style="display:none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="editUserSaveBtn" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Đổi mật khẩu -->
<div class="modal fade" id="changePasswordModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Đổi mật khẩu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="changePasswordForm">
                    <input type="hidden" id="pwdUserId" name="userId" />
                    <div class="mb-3">
                        <label class="form-label">Mật khẩu mới <span class="text-danger">*</span></label>
                        <input id="newPassword" name="newPassword" type="password" class="form-control" required />
                    </div>
                    <div class="text-danger" id="changePasswordError" style="display:none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="changePasswordSaveBtn" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xóa -->
<div class="modal fade" id="deleteUserModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa tài khoản này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" id="deleteUserConfirmBtn" class="btn btn-danger">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            var deleteUserId = null;

            // View Detail
            $(document).on('click', "a[data-action='view-detail'], button[data-action='view-detail']", function(e) {
                e.preventDefault();
                var userId = $(this).data('id');
                $.get('/TaiKhoan/GetUser', { id: userId }).done(function(res) {
                    $('#detailUserName').text(res.userName);
                    $('#detailEmail').text(res.email || 'Chưa cập nhật');
                    $('#detailPhoneNumber').text(res.phoneNumber || 'Chưa cập nhật');
                    $('#detailStatus').html(res.isActive ? 
                        '<span class="status-badge status-active">Hoạt động</span>' : 
                        '<span class="status-badge status-inactive">Vô hiệu</span>');
                    
                    var rolesHtml = '';
                    if (res.selectedRoles && res.selectedRoles.length > 0) {
                        res.selectedRoles.forEach(function(role) {
                            rolesHtml += '<span class="badge bg-primary me-1">' + role + '</span>';
                        });
                    } else {
                        rolesHtml = '<span class="text-muted">Chưa có vai trò</span>';
                    }
                    $('#detailRoles').html(rolesHtml);
                    
                    new bootstrap.Modal(document.getElementById('viewDetailModal')).show();
                }).fail(function() {
                    Notification.error('Không thể tải thông tin tài khoản');
                });
            });

            // Assign Role
            $(document).on('click', "button[data-action='assign-role']", function(e) {
                e.preventDefault();
                var userId = $(this).data('id');
                $('#assignRoleError').hide();
                $.get('/TaiKhoan/GetUser', { id: userId }).done(function(res) {
                    $('#roleUserId').val(res.userId);
                    $('#roleUserInfo').html('<strong>' + res.userName + '</strong> (' + res.email + ')');
                    var html = '';
                    res.allRoles.forEach(function(role) {
                        var checked = res.selectedRoles.includes(role) ? 'checked' : '';
                        html += '<div class="form-check mb-2">';
                        html += '<input class="form-check-input" type="checkbox" name="selectedRoles" value="' + role + '" ' + checked + '>';
                        html += '<label class="form-check-label">' + role + '</label></div>';
                    });
                    if (res.allRoles.length === 0) html = '<p class="text-muted mb-0">Chưa có vai trò nào.</p>';
                    $('#roleCheckboxes').html(html);
                    new bootstrap.Modal(document.getElementById('assignRoleModal')).show();
                }).fail(function() {
                    Notification.error('Không thể tải danh sách vai trò');
                });
            });

            $('#assignRoleSaveBtn').on('click', function() {
                var selectedRoles = [];
                $('input[name="selectedRoles"]:checked').each(function() { selectedRoles.push($(this).val()); });
                $.post('/TaiKhoan/AssignRolesAjax', { userId: $('#roleUserId').val(), selectedRoles: selectedRoles }).done(function(res) {
                    if (res.success) {
                        Notification.successAndReload('Phân quyền thành công');
                    } else { 
                        $('#assignRoleError').text(res.message).show(); 
                        Notification.error(res.message || 'Có lỗi xảy ra khi phân quyền');
                    }
                }).fail(function() {
                    Notification.error('Có lỗi xảy ra khi phân quyền');
                });
            });

            // Edit User
            $(document).on('click', "button[data-action='edit']", function(e) {
                e.preventDefault();
                var userId = $(this).data('id');
                $('#editUserError').hide();
                $.get('/TaiKhoan/GetUser', { id: userId }).done(function(res) {
                    $('#editUserId').val(res.userId);
                    $('#editUserName').val(res.userName);
                    $('#editEmail').val(res.email);
                    $('#editPhoneNumber').val(res.phoneNumber);
                    $('#editIsActive').val(res.isActive ? 'true' : 'false');
                    new bootstrap.Modal(document.getElementById('editUserModal')).show();
                }).fail(function() {
                    Notification.error('Không thể tải thông tin tài khoản');
                });
            });

            $('#editUserSaveBtn').on('click', function() {
                var email = $('#editEmail').val();
                if (!email || email.trim() === '') {
                    $('#editUserError').text('Email không được để trống').show();
                    return;
                }
                
                $.post('/TaiKhoan/EditUserAjax', $('#editUserForm').serialize()).done(function(res) {
                    if (res.success) {
                        Notification.successAndReload('Cập nhật thông tin thành công');
                    } else { 
                        $('#editUserError').text(res.message).show(); 
                        Notification.error(res.message || 'Có lỗi xảy ra khi cập nhật');
                    }
                }).fail(function() {
                    Notification.error('Có lỗi xảy ra khi cập nhật');
                });
            });

            // Change Password
            $(document).on('click', "button[data-action='change-password']", function(e) {
                e.preventDefault();
                var userId = $(this).data('id');
                $('#pwdUserId').val(userId);
                $('#newPassword').val('');
                $('#changePasswordError').hide();
                new bootstrap.Modal(document.getElementById('changePasswordModal')).show();
            });

            $('#changePasswordSaveBtn').on('click', function() {
                var pwd = $('#newPassword').val();
                if (!pwd || pwd.length < 6) {
                    $('#changePasswordError').text('Mật khẩu phải có ít nhất 6 ký tự').show();
                    return;
                }
                
                $.post('/TaiKhoan/ChangePasswordAjax', $('#changePasswordForm').serialize()).done(function(res) {
                    if (res.success) { 
                        Notification.successAndReload('Đổi mật khẩu thành công');
                    } else { 
                        $('#changePasswordError').text(res.message).show(); 
                        Notification.error(res.message || 'Có lỗi xảy ra khi đổi mật khẩu');
                    }
                }).fail(function() {
                    Notification.error('Có lỗi xảy ra khi đổi mật khẩu');
                });
            });

            // Activate
            $(document).on('click', "button[data-action='activate']", function(e) {
                e.preventDefault();
                var userId = $(this).data('id');
                $.post('/TaiKhoan/ActivateAjax', { userId: userId }).done(function(res) {
                    if (res.success) {
                        Notification.successAndReload('Kích hoạt tài khoản thành công');
                    } else {
                        Notification.error(res.message || 'Có lỗi xảy ra khi kích hoạt');
                    }
                }).fail(function() {
                    Notification.error('Có lỗi xảy ra khi kích hoạt');
                });
            });

            // Deactivate
            $(document).on('click', "button[data-action='deactivate']", function(e) {
                e.preventDefault();
                var userId = $(this).data('id');
                $.post('/TaiKhoan/DeactivateAjax', { userId: userId }).done(function(res) {
                    if (res.success) {
                        Notification.warningAndReload('Vô hiệu hóa tài khoản thành công');
                    } else {
                        Notification.error(res.message || 'Có lỗi xảy ra khi vô hiệu hóa');
                    }
                }).fail(function() {
                    Notification.error('Có lỗi xảy ra khi vô hiệu hóa');
                });
            });

            // Delete
            $(document).on('click', "button[data-action='delete']", function(e) {
                e.preventDefault();
                deleteUserId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('deleteUserModal')).show();
            });

            $('#deleteUserConfirmBtn').on('click', function() {
                if (!deleteUserId) return;
                
                $(this).prop('disabled', true).text('Đang xóa...');
                
                $.post('/TaiKhoan/DeleteAjax', { userId: deleteUserId }).done(function(res) {
                    var modalInstance = bootstrap.Modal.getInstance(document.getElementById('deleteUserModal'));
                    if (modalInstance) modalInstance.hide();
                    
                    if (res.success) {
                        Notification.successAndReload('Xóa tài khoản thành công');
                    } else {
                        Notification.error(res.message || 'Có lỗi xảy ra khi xóa');
                        $('#deleteUserConfirmBtn').prop('disabled', false).text('Xóa');
                    }
                }).fail(function() {
                    var modalInstance = bootstrap.Modal.getInstance(document.getElementById('deleteUserModal'));
                    if (modalInstance) modalInstance.hide();
                    Notification.error('Có lỗi xảy ra khi xóa');
                    $('#deleteUserConfirmBtn').prop('disabled', false).text('Xóa');
                });
            });
        });
    </script>
}