    .status-badge { padding: 4px 8px; border-radius: 12px; font-size: 12px; }
    .status-active { background-color: #d4edda; color: #155724; }
    .status-inactive { background-color: #f8d7da; color: #721c24; }
    .user-name-link { 
        color: #0d6efd; 
        cursor: pointer; 
        text-decoration: none;
    }
    .user-name-link:hover {
        text-decoration: underline;
    }
</style>

<div class="row mb-3 align-items-center">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb custom-breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/" class="text-decoration-none text-secondary"><i class="bi bi-house-door"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a class="text-decoration-none text-secondary">Quản trị hệ thống</a>
                </li>
                <li class="breadcrumb-item active text-primary" aria-current="page">Tài khoản</li>
            </ol>
        </nav>
    </div>
</div>

<div class="d-flex justify-content-between gap-4 mb-4">
    <h2 class="text-primary">Danh sách tài khoản</h2>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên đăng nhập</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Trạng thái</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @{ var stt = 1; }
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-dark">@stt</td>
                        <td>
                            <a href="javascript:void(0)" class="user-name-link" data-action="view-detail" data-id="@user.Id">
                                @user.UserName
                            </a>
                        </td>
                        <td class="text-dark">@user.Email</td>
                        <td class="text-dark">@user.PhoneNumber</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="status-badge status-active">Hoạt động</span>
                            }
                            else
                            {
                                <span class="status-badge status-inactive">Vô hiệu</span>
                            }
                        </td>
                        <td class="text-center">
                            <button class="btn btn-sm" data-action="assign-role" data-id="@user.Id" title="Phân quyền">
                                <i class="bi bi-shield-check text-info"></i>
                            </button>
                            <button class="btn btn-sm" data-action="edit" data-id="@user.Id" title="Sửa thông tin">
                                <i class="fa-solid fa-pen-to-square text-primary"></i>
                            </button>
                            <button class="btn btn-sm" data-action="change-password" data-id="@user.Id" title="Đổi mật khẩu">
                                <i class="bi bi-key text-secondary"></i>
                            </button>
                            @if (user.IsActive)
                            {
                                <button class="btn btn-sm" data-action="deactivate" data-id="@user.Id" title="Vô hiệu hóa">
                                    <i class="bi bi-x-circle text-warning"></i>
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-sm" data-action="activate" data-id="@user.Id" title="Kích hoạt">
                                    <i class="bi bi-check-circle text-success"></i>
                                </button>
                            }
                            <button class="btn btn-sm" data-action="delete" data-id="@user.Id" title="Xóa">
                                <i class="fa-solid fa-trash text-danger"></i>
                            </button>
                        </td>
                    </tr>
                    stt++;
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-primary">Tổng số bản ghi: @(ViewBag.TotalItems ?? Model.Count())</span>
    @if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
    {
        <nav>
            <ul class="pagination pagination-sm mb-0">
                @{ int current = ViewBag.CurrentPage; int total = ViewBag.TotalPages; }
                <li class="page-item @(current == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("DanhSachTaiKhoan", new { page = current - 1, pageSize = ViewBag.PageSize })">«</a>
                </li>
                @for (int i = 1; i <= total; i++)
                {
                    <li class="page-item @(i == current ? "active" : "")">
                        <a class="page-link" href="@Url.Action("DanhSachTaiKhoan", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                    </li>
                }
                <li class="page-item @(current == total ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("DanhSachTaiKhoan", new { page = current + 1, pageSize = ViewBag.PageSize })">»</a>
                </li>
            </ul>
        </nav>
    }
</div>

