<div id="modalContainer"></div>
<div id="deleteModalContainer"></div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // View Detail
            $(document).on('click', "a[data-action='view-detail']", function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $.get('/NhanSu/GetNhanVienDetail', { id: id }).done(function(res) {
                    // Header
                    $('#detailFullNameHeader').text(res.fullName || 'Chưa cập nhật');
                    $('#detailDeptHeader').text(res.departmentName || 'Chưa cập nhật');
                    $('#detailPosHeader').text(res.positionName || 'Chưa cập nhật');
                    $('#detailEmailHeader').text(res.email || 'Chưa cập nhật');
                    $('#detailPhoneHeader').text(res.phoneNumber || 'Chưa cập nhật');
                    
                    // Body
                    $('#detailFullName').text(res.fullName || 'Chưa cập nhật');
                    $('#detailIdentityNumber').text(res.identityNumber || 'Chưa cập nhật');
                    $('#detailGioiTinh').text(res.gioiTinh || 'Chưa cập nhật');
                    $('#detailEmail').text(res.email || 'Chưa cập nhật');
                    $('#detailPhoneNumber').text(res.phoneNumber || 'Chưa cập nhật');
                    $('#detailDepartment').text(res.departmentName || 'Chưa cập nhật');
                    $('#detailPosition').text(res.positionName || 'Chưa cập nhật');
                    
                    new bootstrap.Modal(document.getElementById('viewDetailModal')).show();
                }).fail(function() {
                    Notification.error('Không thể tải thông tin nhân viên');
                });
            });

            // Add new employee
            $('.btn-primary[data-bs-target="#themNhanVienModal"]').click(function(e) {
                e.preventDefault();
                loadModalThemNhanSu();
            });

            // Edit
            $(document).on('click', "a[data-action='edit']", function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                window.location.href = '/NhanSu/SuaNhanVien/' + id;
            });

            // Delete
            $(document).on('click', "a[data-action='delete']", function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                loadModalConfirmDelete(id);
            });
        });

        function loadModalThemNhanSu() {
            $.get('/NhanSu/GetModalThemNhanSu', function(data) {
                $('#modalContainer').html(data);
                setTimeout(function() {
                    var modalElement = document.getElementById('themNhanVienModal');
                    if (modalElement) {
                        var modal = new bootstrap.Modal(modalElement, {
                            backdrop: 'static',
                            keyboard: false
                        });
                        modal.show();
                    } else {
                        console.error('Modal element not found');
                    }
                }, 100);
            }).fail(function(xhr, status, error) {
                console.error('Error loading modal:', error);
                Notification.error('Không thể tải form thêm nhân viên: ' + error);
            });
        }

        function loadModalConfirmDelete(id) {
            $.get('/NhanSu/GetModalConfirmDelete/' + id, function(data) {
                $('#deleteModalContainer').html(data);
                setTimeout(function() {
                    var modalElement = document.getElementById('confirmDeleteModal');
                    if (modalElement) {
                        var modal = new bootstrap.Modal(modalElement);
                        modal.show();
                    }
                }, 100);
            }).fail(function(xhr, status, error) {
                console.error('Error loading delete modal:', error);
                Notification.error('Không thể tải modal xác nhận');
            });
        }
    </script>
}
            $('#deleteModalContainer').html(data);
            setTimeout(function() {
                var modalElement = document.getElementById('confirmDeleteModal');
                if (modalElement) {
                    var modal = new bootstrap.Modal(modalElement);
                    modal.show();
                }
            }, 100);
        }).fail(function(xhr, status, error) {
            console.error('Error loading delete modal:', error);
            Notification.error('Không thể tải modal xác nhận');
        });
    }
    </script>
}
