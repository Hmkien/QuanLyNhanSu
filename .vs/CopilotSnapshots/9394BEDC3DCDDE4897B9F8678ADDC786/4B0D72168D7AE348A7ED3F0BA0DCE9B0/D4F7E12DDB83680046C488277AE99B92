<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th><input type="checkbox"></th>
                    <th>STT</th>
                    <th>Tên nhân viên</th>
                    <th>CMND/CCCD</th>
                    <th>Giới tính</th>
                    <th>Phòng ban</th>
                    <th>Chức vụ</th>
                    <th>Email / SĐT</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int currentPage = ViewBag.CurrentPage ?? 1;
                    int pageSize = ViewBag.PageSize ?? 10;
                    var stt = (currentPage - 1) * pageSize + 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center"><input type="checkbox"></td>
                        <td class="text-dark">@stt</td>
                        <td>
                            <a href="javascript:void(0)" class="employee-name-link" data-action="view-detail" data-id="@item.Id">
                                @item.FullName
                            </a>
                        </td>
                        <td class="text-dark">@item.IdentityNumber</td>
                        <td class="text-dark">@item.GioiTinhStxt</td>
                        <td class="text-dark">@item.DepartmentName</td>
                        <td class="text-dark">@item.PositionName</td>
                        <td class="text-dark">@item.Email / @item.PhoneNumber</td>
                        <td class="text-center">
                            <a href="javascript:void(0)" data-action="edit" data-id="@item.Id" title="Sửa" class="me-2">
                                <i class="bi bi-pen text-primary"></i>
                            </a>
                            <a href="javascript:void(0)" data-action="delete" data-id="@item.Id" title="Xóa">
                                <i class="bi bi-trash text-danger"></i>
                            </a>
                        </td>
                    </tr>
                    stt++;
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-primary">Tổng số bản ghi: @(ViewBag.TotalItems ?? Model.Count())</span>
    @if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
    {
        <nav>
            <ul class="pagination pagination-sm mb-0">
                @{
                    int current = ViewBag.CurrentPage;
                    int total = ViewBag.TotalPages;
                    string search = ViewBag.Search ?? "";
                    string gioiTinh = ViewBag.GioiTinh ?? "";
                    string phongBanId = ViewBag.PhongBanId ?? "";
                }
                <li class="page-item @(current == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("DanhSachNhanVien", new { page = current - 1, pageSize = ViewBag.PageSize, search = search, gioiTinh = gioiTinh, phongBanId = phongBanId })">«</a>
                </li>
                @for (int i = 1; i <= total; i++)
                {
                    <li class="page-item @(i == current ? "active" : "")">
                        <a class="page-link" href="@Url.Action("DanhSachNhanVien", new { page = i, pageSize = ViewBag.PageSize, search = search, gioiTinh = gioiTinh, phongBanId = phongBanId })">@i</a>
                    </li>
                }
                <li class="page-item @(current == total ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("DanhSachNhanVien", new { page = current + 1, pageSize = ViewBag.PageSize, search = search, gioiTinh = gioiTinh, phongBanId = phongBanId })">»</a>
                </li>
            </ul>
        </nav>
    }
</div>

