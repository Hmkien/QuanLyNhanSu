                    <div class="text-danger" id="editUserError" style="display:none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="editUserSaveBtn" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Đổi mật khẩu -->
<div class="modal fade" id="changePasswordModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Đổi mật khẩu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="changePasswordForm">
                    <input type="hidden" id="pwdUserId" name="userId" />
                    <div class="mb-3">
                        <label class="form-label">Mật khẩu mới <span class="text-danger">*</span></label>
                        <input id="newPassword" name="newPassword" type="password" class="form-control" required />
                    </div>
                    <div class="text-danger" id="changePasswordError" style="display:none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="changePasswordSaveBtn" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xóa -->
<div class="modal fade" id="deleteUserModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa tài khoản này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" id="deleteUserConfirmBtn" class="btn btn-danger">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            var deleteUserId = null;

            // Assign Role
            $(document).on('click', "button[data-action='assign-role']", function() {
                var userId = $(this).data('id');
                $('#assignRoleError').hide();
                $.get('/TaiKhoan/GetUser', { id: userId }).done(function(res) {
                    $('#roleUserId').val(res.userId);
                    $('#roleUserInfo').html('<strong>' + res.userName + '</strong> (' + res.email + ')');
                    var html = '';
                    res.allRoles.forEach(function(role) {
                        var checked = res.selectedRoles.includes(role) ? 'checked' : '';
                        html += '<div class="form-check mb-2">';
                        html += '<input class="form-check-input" type="checkbox" name="selectedRoles" value="' + role + '" ' + checked + '>';
                        html += '<label class="form-check-label">' + role + '</label></div>';
                    });
                    if (res.allRoles.length === 0) html = '<p class="text-muted mb-0">Chưa có vai trò nào.</p>';
                    $('#roleCheckboxes').html(html);
                    new bootstrap.Modal(document.getElementById('assignRoleModal')).show();
                });
            });

            $('#assignRoleSaveBtn').on('click', function() {
                var selectedRoles = [];
                $('input[name="selectedRoles"]:checked').each(function() { selectedRoles.push($(this).val()); });
                $.post('/TaiKhoan/AssignRolesAjax', { userId: $('#roleUserId').val(), selectedRoles: selectedRoles }).done(function(res) {
                    if (res.success) location.reload(); else { $('#assignRoleError').text(res.message).show(); }
                });
            });

            // Edit User
            $(document).on('click', "button[data-action='edit']", function() {
                var userId = $(this).data('id');
                $('#editUserError').hide();
                $.get('/TaiKhoan/GetUser', { id: userId }).done(function(res) {
                    $('#editUserId').val(res.userId);
                    $('#editUserName').val(res.userName);
                    $('#editEmail').val(res.email);
                    $('#editPhoneNumber').val(res.phoneNumber);
                    new bootstrap.Modal(document.getElementById('editUserModal')).show();
                });
            });

            $('#editUserSaveBtn').on('click', function() {
                $.post('/TaiKhoan/EditUserAjax', $('#editUserForm').serialize()).done(function(res) {
                    if (res.success) location.reload(); else { $('#editUserError').text(res.message).show(); }
                });
            });

            // Change Password
            $(document).on('click', "button[data-action='change-password']", function() {
                var userId = $(this).data('id');
                $('#pwdUserId').val(userId);
                $('#newPassword').val('');
                $('#changePasswordError').hide();
                new bootstrap.Modal(document.getElementById('changePasswordModal')).show();
            });

            $('#changePasswordSaveBtn').on('click', function() {
                $.post('/TaiKhoan/ChangePasswordAjax', $('#changePasswordForm').serialize()).done(function(res) {
                    if (res.success) { alert('Đổi mật khẩu thành công!'); location.reload(); }
                    else { $('#changePasswordError').text(res.message).show(); }
                });
            });

            // Approve
            $(document).on('click', "button[data-action='approve']", function() {
                var userId = $(this).data('id');
                if (confirm('Bạn có chắc chắn muốn duyệt tài khoản này?')) {
                    $.post('/TaiKhoan/ApproveAjax', { userId: userId }).done(function(res) {
                        if (res.success) location.reload(); else alert(res.message);
                    });
                }
            });

            // Reject
            $(document).on('click', "button[data-action='reject']", function() {
                var userId = $(this).data('id');
                if (confirm('Bạn có chắc chắn muốn huỷ duyệt tài khoản này?')) {
                    $.post('/TaiKhoan/RejectAjax', { userId: userId }).done(function(res) {
                        if (res.success) location.reload(); else alert(res.message);
                    });
                }
            });

            // Delete
            $(document).on('click', "button[data-action='delete']", function() {
                deleteUserId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('deleteUserModal')).show();
            });

            $('#deleteUserConfirmBtn').on('click', function() {
                if (!deleteUserId) return;
                $.post('/TaiKhoan/DeleteAjax', { userId: deleteUserId }).done(function(res) {
                    if (res.success) location.reload(); else alert(res.message);
                });
            });
        });
    </script>
}