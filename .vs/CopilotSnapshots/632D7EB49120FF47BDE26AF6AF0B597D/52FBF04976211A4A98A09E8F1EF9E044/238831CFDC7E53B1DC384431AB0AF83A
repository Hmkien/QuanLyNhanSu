using Microsoft.AspNetCore.DataProtection;
using Microsoft.AspNetCore.Identity;
using Microsoft.AspNetCore.Identity.UI.Services;
using Microsoft.EntityFrameworkCore;
using QuanLyNhanLuc.Constants;
using QuanLyNhanLuc.Data;
using QuanLyNhanLuc.Models.Entities;
using QuanLyNhanLuc.Services;

WebApplicationBuilder builder = WebApplication.CreateBuilder(args);
string connectionString = builder.Configuration.GetConnectionString("QLNLContextConnection") ?? throw new InvalidOperationException("Connection string 'QLNLContextConnection' not found.");

builder.Services.AddDbContext<QLNLContext>(options => options.UseSqlServer(connectionString));
builder.Services.AddIdentity<NguoiDung, VaiTro>(options => options.SignIn.RequireConfirmedAccount = false).AddDefaultTokenProviders()
    .AddEntityFrameworkStores<QLNLContext>();
builder.Services.AddControllersWithViews().AddRazorRuntimeCompilation();
builder.Services.AddDataProtection()
    .PersistKeysToFileSystem(new DirectoryInfo(@"/Keys"))
    .SetApplicationName("Demo Application")
    .SetDefaultKeyLifetime(TimeSpan.FromDays(14));

// Cấu hình Authorization Policies
builder.Services.AddAuthorization(options =>
{
    // Policy yêu cầu Admin
    options.AddPolicy(PolicyNames.RequireAdmin, policy =>
        policy.RequireRole(RoleNames.Admin));
    
    // Policy yêu cầu HR
    options.AddPolicy(PolicyNames.RequireHR, policy =>
        policy.RequireRole(RoleNames.HR, RoleNames.Admin));
    
    // Policy yêu cầu Kế toán
    options.AddPolicy(PolicyNames.RequireKeToan, policy =>
        policy.RequireRole(RoleNames.KeToan, RoleNames.Admin));
    
    // Policy yêu cầu Ban giám đốc
    options.AddPolicy(PolicyNames.RequireBGD, policy =>
        policy.RequireRole(RoleNames.BGD, RoleNames.Admin));
    
    // Policy quản lý nhân sự (Admin hoặc HR)
    options.AddPolicy(PolicyNames.QuanLyNhanSu, policy =>
        policy.RequireRole(RoleNames.Admin, RoleNames.HR));
    
    // Policy quản lý lương (Admin hoặc Kế toán)
    options.AddPolicy(PolicyNames.QuanLyLuong, policy =>
        policy.RequireRole(RoleNames.Admin, RoleNames.KeToan));
    
    // Policy xem báo cáo
    options.AddPolicy(PolicyNames.XemBaoCao, policy =>
        policy.RequireRole(RoleNames.Admin, RoleNames.BGD, RoleNames.HR, RoleNames.KeToan));
    
    // Policy quản trị hệ thống (chỉ Admin)
    options.AddPolicy(PolicyNames.QuanTriHeThong, policy =>
        policy.RequireRole(RoleNames.Admin));
});

builder.Services.ConfigureApplicationCookie(options =>
{
    options.AccessDeniedPath = "/Identity/Account/AccessDenied";
    options.ExpireTimeSpan = TimeSpan.FromMinutes(60);
    options.SlidingExpiration = true;
    options.Cookie.SecurePolicy = CookieSecurePolicy.Always;
    options.Cookie.SameSite = SameSiteMode.Lax;
    options.Cookie.HttpOnly = true;
    options.LoginPath = "/Identity/Account/Login";
});
builder.Services.Configure<IdentityOptions>(options =>
{
    options.SignIn.RequireConfirmedEmail = false;
    options.SignIn.RequireConfirmedPhoneNumber = false;
    options.User.RequireUniqueEmail = true;
    options.Lockout.AllowedForNewUsers = true;
    options.Lockout.DefaultLockoutTimeSpan = TimeSpan.FromMinutes(5);
    options.Lockout.MaxFailedAccessAttempts = 5;
});
builder.Services.AddRazorPages();
builder.Services.AddTransient<IEmailSender, EmailSender>();

WebApplication app = builder.Build();

// Seed Data
using (IServiceScope scope = app.Services.CreateScope())
{
    IServiceProvider services = scope.ServiceProvider;
    try
    {
        QLNLContext context = services.GetRequiredService<QLNLContext>();
        DbInitializer.Initialize(context);
        // Seed identity data (roles, admin user, menus)
        await DbInitializer.SeedAsync(services);
    }
    catch (Exception ex)
    {
        ILogger<Program> logger = services.GetRequiredService<ILogger<Program>>();
        logger.LogError(ex, "An error occurred while seeding the database.");
    }
}

if (!app.Environment.IsDevelopment())
{
    _ = app.UseExceptionHandler("/Home/Error");
    _ = app.UseHsts();
}

app.UseHttpsRedirection();
app.UseStaticFiles();
app.UseRouting();
app.UseAuthentication();
app.UseAuthorization();

app.MapRazorPages();
app.MapControllerRoute(
    name: "default",
    pattern: "{controller=TongQuan}/{action=Index}/{id?}");

app.Run();