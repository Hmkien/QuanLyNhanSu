    #region Khen thưởng - Kỷ luật
    [HttpGet]
    public async Task<IActionResult> GetDanhSachKhenThuong(string nguoiDungId)
    {
        try
        {
            var nhanSu = await _context.NhanSus.FirstOrDefaultAsync(n => n.MaNhanVien == nguoiDungId);
            if (nhanSu == null)
                return Json(new { success = true, data = new List<object>() });

            var khenThuongs = await _context.KhenThuongKyLuats
                .Where(k => k.NhanSuId == nhanSu.Id && k.Loai == Models.Enums.LoaiKhenThuongKyLuat.KhenThuong)
                .OrderByDescending(k => k.NgayQuyetDinh)
                .Select(k => new
                {
                    k.Id,
                    noiDung = k.LyDo,
                    hinhThucStxt = k.HinhThuc,
                    ngayKy = k.NgayQuyetDinh,
                    soQuyetDinh = k.MaQuyetDinh,
                    giaTri = k.SoTien
                })
                .ToListAsync();
            return Json(new { success = true, data = khenThuongs });
        }
        catch (Exception ex)
        {
            return Json(new { success = false, message = ex.Message });
        }
    }

