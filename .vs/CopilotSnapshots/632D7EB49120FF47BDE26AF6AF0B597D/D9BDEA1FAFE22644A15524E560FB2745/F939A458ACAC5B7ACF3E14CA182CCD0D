<script>
    $(document).ready(function() {
        // Preview avatar when select file
        $('#avatarUploadAdd').on('change', function(e) {
            var file = e.target.files[0];
            if (!file) return;

            // Validate file type
            var allowedTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
            if (!allowedTypes.includes(file.type)) {
                Notification.error('Chỉ cho phép upload file ảnh (JPG, PNG, GIF, WEBP)');
                $(this).val('');
                return;
            }

            // Validate file size (max 5MB)
            if (file.size > 5 * 1024 * 1024) {
                Notification.error('Kích thước file không được vượt quá 5MB');
                $(this).val('');
                return;
            }

            // Preview image
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#avatarPreviewAdd').attr('src', e.target.result);
            };
            reader.readAsDataURL(file);
        });

        $('#btnSaveNhanVien').on('click', function(e) {
            e.preventDefault();
            
            var form = $('#themNhanVienForm')[0];
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            // Validate password match
            var password = $('input[name="MatKhau"]').val();
            var confirmPassword = $('input[name="XacNhanMatKhau"]').val();
            if (password !== confirmPassword) {
                Notification.error('Mật khẩu và xác nhận mật khẩu không khớp');
                return;
            }

            var formData = new FormData(form);
            var btn = $(this);
            
            btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Đang lưu...');
            
            $.ajax({
                url: '/NhanSu/Create',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(res) {
                    if (res.success) {
                        Notification.success('Đã thêm nhân viên thành công');
                        $('#themNhanVienModal').modal('hide');
                        setTimeout(function() {
                            window.location.href = res.redirectUrl;
                        }, 500);
                    } else {
                        Notification.error(res.message || 'Có lỗi xảy ra');
                        btn.prop('disabled', false).text('Lưu');
                    }
                },
                error: function(xhr) {
                    var errorMsg = 'Có lỗi xảy ra khi thêm nhân viên';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMsg = xhr.responseJSON.message;
                    }
                    Notification.error(errorMsg);
                    btn.prop('disabled', false).text('Lưu');
                }
            });
        });
    });
</script>
