@using QuanLyNhanLuc.Extensions
@using QuanLyNhanLuc.Models.Enums
@model QuanLyNhanLuc.Models.ViewModels.ThemNhanVienVM

<div class="modal fade" id="themNhanVienModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary">Thêm mới nhân viên</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="themNhanVienForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="row">
                        <!-- Cột bên trái: Upload ảnh -->
                        <div class="col-md-3 text-center">
                            <div class="mb-3">
                                <h6 class="text-primary mb-3">Ảnh đại diện</h6>
                                <div class="position-relative d-inline-block">
                                    <img id="avatarPreviewAdd" src="/Image/AvatarMIG.png" 
                                         alt="Ảnh đại diện" 
                                         class="rounded-circle border shadow-sm" 
                                         style="width: 150px; height: 150px; object-fit: cover;">
                                    <label for="avatarUploadAdd" class="position-absolute bottom-0 end-0 bg-primary text-white rounded-circle p-2" style="cursor: pointer;" title="Chọn ảnh đại diện">
                                        <i class="bi bi-camera-fill"></i>
                                    </label>
                                    <input type="file" id="avatarUploadAdd" name="AnhDaiDien" accept="image/*" class="d-none">
                                </div>
                                <p class="text-muted mt-2 small">Tối đa 5MB (jpg, png, gif, webp)</p>
                            </div>
                        </div>
                        <!-- Cột bên phải: Thông tin -->
                        <div class="col-md-9">
                            <!-- Thông tin nhân viên -->
                            <h6 class="mb-3 text-primary">Thông tin nhân viên</h6>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                    <input name="HoVaTen" class="form-control" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Giới tính <span class="text-danger">*</span></label>
                                    <select name="GioiTinh" class="form-select" required>
                                        <option value="">---Chọn---</option>
                                        @foreach (GioiTinh gioiTinh in Enum.GetValues(typeof(GioiTinh)))
                                        {
                                            <option value="@((int)gioiTinh)">@gioiTinh.GetDescription()</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Ngày sinh</label>
                                    <input name="NgaySinh" type="date" class="form-control" value="@DateTime.Now.AddYears(-20).ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">CCCD / CMND</label>
