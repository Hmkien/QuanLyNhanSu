                        <th>CMND/CCCD</th>
                        <th>Giới tính</th>
                        <th>
                            <a href="@Url.Action("DanhSachThucTap", new { page = ViewBag.CurrentPage, pageSize = ViewBag.PageSize, search = ViewBag.Search, gioiTinh = ViewBag.GioiTinh, phongBanId = ViewBag.PhongBanId, sortBy = "department", sortOrder = ViewBag.SortBy == "department" && ViewBag.SortOrder == "asc" ? "desc" : "asc" })" class="text-decoration-none text-dark">
                                Phòng ban
                                @if (ViewBag.SortBy == "department")
                                {
                                    <i class="bi bi-arrow-@(ViewBag.SortOrder == "asc" ? "up" : "down")"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a href="@Url.Action("DanhSachThucTap", new { page = ViewBag.CurrentPage, pageSize = ViewBag.PageSize, search = ViewBag.Search, gioiTinh = ViewBag.GioiTinh, phongBanId = ViewBag.PhongBanId, sortBy = "position", sortOrder = ViewBag.SortBy == "position" && ViewBag.SortOrder == "asc" ? "desc" : "asc" })" class="text-decoration-none text-dark">
                                Chức vụ
                                @if (ViewBag.SortBy == "position")
                                {
                                    <i class="bi bi-arrow-@(ViewBag.SortOrder == "asc" ? "up" : "down")"></i>
                                }
                            </a>
                        </th>
                        <th>Email / SĐT</th>
                        <th>
                            <a href="@Url.Action("DanhSachThucTap", new { page = ViewBag.CurrentPage, pageSize = ViewBag.PageSize, search = ViewBag.Search, gioiTinh = ViewBag.GioiTinh, phongBanId = ViewBag.PhongBanId, sortBy = "status", sortOrder = ViewBag.SortBy == "status" && ViewBag.SortOrder == "asc" ? "desc" : "asc" })" class="text-decoration-none text-dark">
                                Trạng thái
                                @if (ViewBag.SortBy == "status")
                                {
                                    <i class="bi bi-arrow-@(ViewBag.SortOrder == "asc" ? "up" : "down")"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                @{
                    int currentPage = ViewBag.CurrentPage ?? 1;
                    int pageSize = ViewBag.PageSize ?? 10;
                    var stt = (currentPage - 1) * pageSize + 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center"><input type="checkbox"></td>
                        <td class="text-dark">@stt</td>
