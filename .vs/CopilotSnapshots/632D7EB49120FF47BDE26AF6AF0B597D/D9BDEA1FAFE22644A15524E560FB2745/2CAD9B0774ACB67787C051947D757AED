            <div class="col-md-2">
                <select name="phongBanId" class="form-select form-select-sm">
                    <option value="">-- Chọn phòng ban --</option>
                    @if (ViewBag.Departments != null)
                    {
                        foreach (var dept in ViewBag.Departments)
                        {
                            var isSelected = ViewBag.PhongBanId != null && ViewBag.PhongBanId.ToString() == dept.Id.ToString();
                            <option value="@dept.Id" selected="@isSelected">@dept.TenPhongBan</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select name="sortBy" class="form-select form-select-sm">
                    <option value="">-- Sắp xếp theo --</option>
                    <option value="name" selected="@(ViewBag.SortBy == "name")">Tên thực tập sinh</option>
                    <option value="department" selected="@(ViewBag.SortBy == "department")">Phòng ban</option>
                    <option value="position" selected="@(ViewBag.SortBy == "position")">Chức vụ</option>
                    <option value="status" selected="@(ViewBag.SortBy == "status")">Trạng thái</option>
                </select>
            </div>
            <div class="col-md-3">
                <div class="input-group input-group-sm">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm tên, CCCD, email, SĐT..." value="@ViewBag.Search" />
                </div>
            </div>
            <input type="hidden" name="sortOrder" value="@(ViewBag.SortOrder ?? "asc")" />
            <div class="col-auto">
                <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-search me-1"></i>Tìm kiếm</button>
                <a asp-action="DanhSachThucTap" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-clockwise me-1"></i>Làm mới</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center py-5">
