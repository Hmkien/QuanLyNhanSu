@using QuanLyNhanLuc.Extensions
@using QuanLyNhanLuc.Models.Enums
@model QuanLyNhanLuc.Models.ViewModels.ThemNhanVienVM

<div class="modal fade" id="themNhanVienModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary">Thêm mới nhân viên</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="themNhanVienForm" enctype="multipart/form-data">
                <div class="modal-body">
                    <!-- Thông tin nhân viên -->
                    <h6 class="mb-3 text-primary">Thông tin nhân viên</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Họ và tên <span class="text-danger">*</span></label>
                            <input name="HoVaTen" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Giới tính <span class="text-danger">*</span></label>
                            <select name="GioiTinh" class="form-select" required>
                                <option value="">---Chọn---</option>
                                @foreach (GioiTinh gioiTinh in Enum.GetValues(typeof(GioiTinh)))
                                {
                                    <option value="@((int)gioiTinh)">@gioiTinh.GetDescription()</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ngày sinh</label>
                            <input name="NgaySinh" type="date" class="form-control" value="@DateTime.Now.AddYears(-20).ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">CCCD / CMND</label>
                            <input name="CCCD" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Phòng ban</label>
                            <select name="PhongBanId" class="form-select" asp-items="Model.Departments">
                                <option value="">---Chọn---</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Chức vụ</label>
                            <select name="ChucVuId" class="form-select" asp-items="Model.ChucVus">
                                <option value="">---Chọn---</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Loại nhân sự <span class="text-danger">*</span></label>
                        <select name="LoaiNhanSu" class="form-select" required>
                            <option value="">---Chọn---</option>
                            @foreach (NhanSuType nhanSuType in Enum.GetValues(typeof(NhanSuType)))
                            {
                                <option value="@((int)nhanSuType)">@nhanSuType.GetDescription()</option>
                            }
                        </select>
                    </div>

                    <!-- Thông tin tài khoản -->
                    <h6 class="mb-3 text-primary mt-4">Thông tin tài khoản</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email <span class="text-danger">*</span></label>
                            <input name="Email" type="email" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input name="SoDienThoai" type="tel" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Mã nhân viên</label>
                            <input name="MaNhanVien" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                            <input name="MatKhau" type="password" class="form-control" required minlength="6" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                            <input name="XacNhanMatKhau" type="password" class="form-control" required minlength="6" />
                        </div>
                    </div>

                    <!-- Ảnh đại diện -->
                    <h6 class="mb-3 text-primary mt-4">Ảnh đại diện</h6>
                    <div class="mb-3">
