<script>
$(document).ready(function() {
    $('#formSuaTrinhDo').on('submit', function(e) {
        e.preventDefault();
        
        var formData = $(this).serialize();
        
        $.ajax({
            url: '/NhanSu/SaveTrinhDo',
            type: 'POST',
            data: formData,
            success: function(res) {
                if (res.success) {
                    Notification.success(res.message || 'C?p nh?t trình ?? thành công');
                    $('#ModalSuaTrinhDo').modal('hide');
                    loadTrinhDo($('#trinhDoNguoiDungId').val());
                } else {
                    Notification.error(res.message || 'Có l?i x?y ra');
                }
            },
            error: function() {
                Notification.error('Có l?i x?y ra khi l?u thông tin');
            }
        });
    });
});
</script>
