
@model QuanLyNhanLuc.Models.Entities.ThongTinNguoiDung
@inject QuanLyNhanLuc.Data.QLNLContext _context
@{
    var departments = _context.Departments.Where(d => d.Status == QuanLyNhanLuc.Models.Enums.Status.Approved).ToList();
    var chucVus = _context.ChucVus.Where(c => c.Status == QuanLyNhanLuc.Models.Enums.Status.Approved).ToList();
}
<div class="modal fade" id="ModalSuaViTriCongTac" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary fw-bold">Chỉnh sửa vị trí công tác</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="formSuaViTriCongTac">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Phòng ban</label>
                            <select class="form-select" name="DepartmentId">
                                <option value="">--Chọn--</option>
                                @foreach (var dept in departments)
                                {
                                    <option value="@dept.Id" @(Model.DepartmentId == dept.Id ? "selected" : "")>@dept.TenPhongBan</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Chức vụ</label>
                            <select class="form-select" name="ChucVuId">
                                <option value="">--Chọn--</option>
                                @foreach (var cv in chucVus)
                                {
                                    <option value="@cv.Id" @(Model.ChucVuId == cv.Id ? "selected" : "")>@cv.TenChucVu</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Loại nhân viên</label>
                            <select class="form-select" name="NhanSuType">
                                <option value="">--Chọn--</option>
                                <option value="0" @(Model.NhanSuType == QuanLyNhanLuc.Models.Enums.NhanSuType.ChinhThuc ? "selected" : "")>Chính thức</option>
                                <option value="1" @(Model.NhanSuType == QuanLyNhanLuc.Models.Enums.NhanSuType.ThucTap ? "selected" : "")>Thực tập</option>
                                <option value="2" @(Model.NhanSuType == QuanLyNhanLuc.Models.Enums.NhanSuType.ThoiVu ? "selected" : "")>Thời vụ</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#formSuaViTriCongTac').on('submit', function(e) {
        e.preventDefault();
        var formData = $(this).serialize();
        $.ajax({
            url: '/NhanSu/UpdateViTriCongTac',
            type: 'POST',
            data: formData,
            success: function(res) {
                if (res.success) {
                    Notification.success(res.message);
                    $('#ModalSuaViTriCongTac').modal('hide');
                    location.reload();
                } else {
                    Notification.error(res.message);
                }
            },
            error: function() {
                Notification.error('Có lỗi xảy ra');
            }
        });
    });
});
</script>
