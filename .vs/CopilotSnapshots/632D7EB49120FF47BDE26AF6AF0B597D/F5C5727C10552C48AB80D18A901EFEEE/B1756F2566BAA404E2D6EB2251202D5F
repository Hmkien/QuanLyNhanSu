
@model QuanLyNhanLuc.Models.Entities.ThongTinNguoiDung
<div class="modal fade" id="editTaiKhoanModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary fw-bold">Chỉnh sửa thông tin tài khoản</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="formSuaThongTinTaiKhoan">
                <input type="hidden" name="UserId" value="@Model.UserId" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Mã nhân viên</label>
                        <input type="text" class="form-control" name="MaNhanVien" value="@Model.User?.MaNhanVien" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" name="Email" value="@Model.User?.Email" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số điện thoại</label>
                        <input type="text" class="form-control" name="PhoneNumber" value="@Model.User?.PhoneNumber" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#formSuaThongTinTaiKhoan').on('submit', function(e) {
        e.preventDefault();
        var formData = $(this).serialize();
        $.ajax({
            url: '/NhanSu/UpdateThongTinTaiKhoan',
            type: 'POST',
            data: formData,
            success: function(res) {
                if (res.success) {
                    Notification.success(res.message);
                    $('#editTaiKhoanModal').modal('hide');
                    location.reload();
                } else {
                    Notification.error(res.message);
                }
            },
            error: function() {
                Notification.error('Có lỗi xảy ra');
            }
        });
    });
});
</script>