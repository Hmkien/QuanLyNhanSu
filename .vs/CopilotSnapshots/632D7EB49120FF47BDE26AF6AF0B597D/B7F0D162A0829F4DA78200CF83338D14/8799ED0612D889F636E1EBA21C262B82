<script>
// ==================== OPTIMIZED PAGE MANAGER ====================
const PageManager = {
    nguoiDungId: '@Model.UserId',
    cache: {},
    loadedSections: new Set(),
    currentTopTab: null,
    currentSubTab: null,
    storageKey: 'nhanvien_tab_@Model.UserId',

    // Lưu trạng thái tab
    saveTabState() {
        const state = {
            topTab: this.currentTopTab,
            subTab: this.currentSubTab
        };
        sessionStorage.setItem(this.storageKey, JSON.stringify(state));
    },

    // Khôi phục trạng thái tab
    restoreTabState() {
        const saved = sessionStorage.getItem(this.storageKey);
        if (saved) {
            try {
                return JSON.parse(saved);
            } catch (e) {
                return null;
            }
        }
        return null;
    },

    // Kiểm tra đã load chưa
    isLoaded(section) {
        return this.loadedSections.has(section);
    },

    // Đánh dấu đã load
    markLoaded(section) {
        this.loadedSections.add(section);
    },

    // Xóa cache khi cần reload
    invalidateCache(section) {
        this.loadedSections.delete(section);
        delete this.cache[section];
    },

    // API call với cache
    async fetchData(url, params, cacheKey) {
        if (cacheKey && this.cache[cacheKey]) {
            return this.cache[cacheKey];
        }
        
        return new Promise((resolve, reject) => {
            $.get(url, params, (res) => {
                if (cacheKey && res.success) {
                    this.cache[cacheKey] = res;
                }
                resolve(res);
            }).fail(reject);
        });
    }
};

// ==================== TAB NAVIGATION ====================
function initNavigation() {
    // Top tabs
    $(".menu-link-top").click(function(e) {
        e.preventDefault();
        const targetSection = $(this).data("target-top");
        switchTopTab(targetSection);
    });

    // Sub tabs
    $(".menu-link").click(function(e) {
        e.preventDefault();
        const targetSection = $(this).data("target");
        switchSubTab(targetSection);
    });

    // Khôi phục trạng thái
    const savedState = PageManager.restoreTabState();
    if (savedState) {
        if (savedState.topTab) {
            switchTopTab(savedState.topTab, false);
        }
        if (savedState.subTab) {
            setTimeout(() => switchSubTab(savedState.subTab, false), 100);
        }
    }
}

function switchTopTab(targetSection, saveState = true) {
    $(".content-section-top").addClass("d-none");
    $(targetSection).removeClass("d-none");
    $(".menu-link-top").removeClass("text-primary").addClass("text-dark");
    $(`.menu-link-top[data-target-top="${targetSection}"]`).removeClass("text-dark").addClass("text-primary");
    
    PageManager.currentTopTab = targetSection;
    if (saveState) PageManager.saveTabState();

    // Lazy load data
    loadTopTabData(targetSection);
}

function switchSubTab(targetSection, saveState = true) {
    $(".content-section").addClass("d-none");
    $("#" + targetSection).removeClass("d-none");
    $(".menu-link").removeClass("text-primary").addClass("text-dark");
    $(`.menu-link[data-target="${targetSection}"]`).removeClass("text-dark").addClass("text-primary");
    
    PageManager.currentSubTab = targetSection;
    if (saveState) PageManager.saveTabState();

    // Lazy load data
    loadSubTabData(targetSection);
}

// ==================== LAZY LOADING ====================
function loadTopTabData(section) {
    switch(section) {
        case "#hop-dong-bao-hiem":
            if (!PageManager.isLoaded('hopDong')) {
                loadHopDongList(PageManager.nguoiDungId);
            }
            break;
        case "#khen-thuong-ky-luat":
            if (!PageManager.isLoaded('khenThuong')) {
                loadKhenThuongList(PageManager.nguoiDungId);
            }
            if (!PageManager.isLoaded('kyLuat')) {
                loadKyLuatList(PageManager.nguoiDungId);
            }
            break;
        case "#luong":
            if (!PageManager.isLoaded('luong')) {
                loadLuongList(PageManager.nguoiDungId);
            }
            break;
    }
}

function loadSubTabData(section) {
    switch(section) {
        case "TaiKhoanNganHang":
            if (!PageManager.isLoaded('bank')) {
                loadBankInfoDisplay(PageManager.nguoiDungId);
            }
            break;
        case "TrinhDo":
            if (!PageManager.isLoaded('trinhDo')) {
                loadTrinhDoDisplay(PageManager.nguoiDungId);
            }
            if (!PageManager.isLoaded('daoTao')) {
                loadDaoTaoList(PageManager.nguoiDungId);
            }
            break;
        case "HoKhau":
            if (!PageManager.isLoaded('family')) {
                loadFamilyList(PageManager.nguoiDungId);
            }
            break;
    }
}

// ==================== LOAD FUNCTIONS ====================
function loadBankInfoDisplay(userId) {
    $('#bankInfoContent').html('<p class="text-muted">Đang tải...</p>');
    PageManager.fetchData('/NhanSu/GetTaiKhoanNganHang', { nguoiDungId: userId }, 'bank_' + userId)
        .then(res => {
            if (res.success && res.data) {
                const data = res.data;
                $('#bankInfoContent').html(`
                    <div class="col-md-6">
                        <p class="mb-1 text-secondary">Ngân hàng</p>
                        <p class="text-primary">${data.tenNganHang || 'Chưa cập nhật'}</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-1 text-secondary">Chi nhánh</p>
                        <p class="text-primary">${data.chiNhanh || 'Chưa cập nhật'}</p>
                    </div>
                    <div class="col-md-6 mt-3">
                        <p class="mb-1 text-secondary">Số tài khoản</p>
                        <p class="text-primary">${data.soTaiKhoan || 'Chưa cập nhật'}</p>
                    </div>
                    <div class="col-md-6 mt-3">
                        <p class="mb-1 text-secondary">Tên chủ tài khoản</p>
                        <p class="text-primary">${data.tenChuTaiKhoan || 'Chưa cập nhật'}</p>
                    </div>
                `);
            } else {
                $('#bankInfoContent').html('<p class="text-muted">Chưa có thông tin ngân hàng</p>');
            }
            PageManager.markLoaded('bank');
        });
}

