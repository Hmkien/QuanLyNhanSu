// ==================== EDIT/VIEW FUNCTIONS ====================
function editHopDong(id) {
    $.get('/NhanSu/GetHopDong', { id: id }, function(res) {
        if (res.success) {
            const data = res.data;
            $('#hopDongId').val(data.id);
            $('#maHopDong').val(data.maHopDong);
            $('#loaiHopDong').val(data.loaiHopDong);
            $('#ngayKy').val(data.ngayKy);
            $('#ngayBatDau').val(data.ngayBatDau);
            $('#ngayKetThuc').val(data.ngayKetThuc);
            $('#luongCoBan').val(data.luongCoBan);
            $('#ghiChuHopDong').val(data.ghiChu);
            $('#modalHopDongTitle').text('Sửa hợp đồng');
            $('#ModalHopDong').modal('show');
        } else {
            Notification.error(res.message);
        }
    });
}
function viewHopDong(id) { editHopDong(id); }

function editKhenThuong(id) {
    $.get('/NhanSu/GetKhenThuongKyLuat', { id: id }, function(res) {
