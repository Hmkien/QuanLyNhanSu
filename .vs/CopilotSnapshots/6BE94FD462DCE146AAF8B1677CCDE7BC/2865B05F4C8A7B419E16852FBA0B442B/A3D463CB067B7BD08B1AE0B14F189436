    [Description("Kế toán duyệt")]
    KeToanDuyet = 3,

    [Description("Giám đốc duyệt")]
    GiamDocDuyet = 4,

    [Description("Hoàn thành")]
    HoanThanh = 5,

    [Description("Từ chối")]
    TuChoi = 99
}
