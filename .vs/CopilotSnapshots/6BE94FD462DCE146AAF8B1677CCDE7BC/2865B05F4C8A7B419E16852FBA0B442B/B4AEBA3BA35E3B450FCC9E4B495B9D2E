                </span>
                <div>
                    <strong class="text-info">Nộp đơn</strong>
                    <p class="mb-0 text-muted small">@Model.NgayNop.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            </div>

            <!-- Trưởng phòng duyệt -->
            @if (Model.TrangThai >= QuanLyNhanLuc.Models.Enums.TrangThaiThuTuc.TruongPhongDuyet)
            {
                <div class="timeline-item">
                    <span class="timeline-badge bg-warning bg-opacity-10 text-warning position-absolute" style="left: 0;">
                        <i class="bi bi-person-check"></i>
                    </span>
                    <div>
                        <strong class="text-warning">Trưởng phòng duyệt</strong>
                        @if (Model.NgayDuyet.HasValue)
                        {
                            <p class="mb-0 text-muted small">@Model.NgayDuyet.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        }
                    </div>
                </div>
            }

            <!-- Kế toán duyệt -->
            @if (Model.TrangThai >= QuanLyNhanLuc.Models.Enums.TrangThaiThuTuc.KeToanDuyet)
            {
                <div class="timeline-item">
                    <span class="timeline-badge bg-primary bg-opacity-10 text-primary position-absolute" style="left: 0;">
                        <i class="bi bi-calculator"></i>
                    </span>
                    <div>
                        <strong class="text-primary">Kế toán duyệt</strong>
                        @if (Model.NgayDuyet.HasValue)
                        {
                            <p class="mb-0 text-muted small">@Model.NgayDuyet.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        }
                    </div>
                </div>
            }

            <!-- Giám đốc duyệt hoặc Hoàn thành -->
            @if (Model.TrangThai == QuanLyNhanLuc.Models.Enums.TrangThaiThuTuc.HoanThanh)
            {
                <div class="timeline-item">
                    <span class="timeline-badge bg-success bg-opacity-10 text-success position-absolute" style="left: 0;">
                        <i class="bi bi-check-circle-fill"></i>
                    </span>
                    <div>
                        <strong class="text-success">Hoàn thành</strong>
                        @if (Model.NgayDuyet.HasValue)
                        {
                            <p class="mb-0 text-muted small">@Model.NgayDuyet.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.NguoiDuyet))
                        {
                            <p class="mb-0 text-muted small">Người duyệt: <strong>@Model.NguoiDuyet</strong></p>
                        }
                    </div>
                </div>
            }

            <!-- Từ chối -->
            @if (Model.TrangThai == QuanLyNhanLuc.Models.Enums.TrangThaiThuTuc.TuChoi)
            {
                <div class="timeline-item">
                    <span class="timeline-badge bg-danger bg-opacity-10 text-danger position-absolute" style="left: 0;">
                        <i class="bi bi-x-circle-fill"></i>
                    </span>
                    <div>
                        <strong class="text-danger">Từ chối</strong>
                        @if (Model.NgayDuyet.HasValue)
                        {
                            <p class="mb-0 text-muted small">@Model.NgayDuyet.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.NguoiDuyet))
                        {
                            <p class="mb-0 text-muted small">Người từ chối: <strong>@Model.NguoiDuyet</strong></p>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Ghi chú người duyệt -->
@if (!string.IsNullOrEmpty(Model.GhiChu))
{
    <div class="alert alert-secondary mt-3">
