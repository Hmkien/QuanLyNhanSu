<!-- Timeline duyệt -->
@if (Model.TrangThai != QuanLyNhanLuc.Models.Enums.TrangThaiThuTuc.NopDon || !string.IsNullOrEmpty(Model.NguoiDuyet))
{
    <div class="card border-0 shadow-sm mt-3">
        <div class="card-body">
            <h6 class="fw-bold mb-3">
                <i class="bi bi-diagram-3 text-info me-2"></i>
