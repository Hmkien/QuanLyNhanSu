    </div>
}

<!-- Actions -->
@if (canEdit || canApprove || canReject)
{
    <div class="mt-3 pt-3 border-top">
        <div class="d-flex gap-2 justify-content-end">
            @if (canEdit)
            {
                <button type="button" class="btn btn-primary" onclick="openEditModal('@Model.Id')">
                    <i class="bi bi-pen me-2"></i>Chỉnh sửa
                </button>
            }
            @if (canReject)
            {
                <button type="button" class="btn btn-danger" onclick="rejectFromDetail('@Model.Id')">
                    <i class="bi bi-x-circle me-2"></i>Từ chối
                </button>
            }
            @if (canApprove)
            {
                <button type="button" class="btn btn-success" onclick="approveFromDetail('@Model.Id')">
                    <i class="bi bi-check-circle me-2"></i>Duyệt
                </button>
            }
        </div>
    </div>
}

<script>
    function openEditModal(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        setTimeout(() => {
            $("a[data-action='edit'][data-id='" + id + "']").click();
        }, 300);
    }

    function approveFromDetail(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        setTimeout(() => {
            $("a[data-action='approve'][data-id='" + id + "']").click();
        }, 300);
    }

    function rejectFromDetail(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        setTimeout(() => {
            $("a[data-action='reject'][data-id='" + id + "']").click();
        }, 300);
    }
</script>

    <div class="col-md-6 mb-3">
        <label class="text-muted small">Phòng ban</label>
        <h6>@(Model.NhanSu.PhongBan?.TenPhongBan ?? "-")</h6>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label class="text-muted small">Loại thủ tục</label>
        <h6 data-loai-thu-tuc="@((int)Model.LoaiThuTuc)">
            <span class="badge bg-secondary">@EnumHelper.GetEnumDescription(Model.LoaiThuTuc)</span>
        </h6>
    </div>
    
    <div class="col-md-6 mb-3">
        <label class="text-muted small">Ngày nộp</label>
        <h6><i class="bi bi-calendar-event me-2"></i>@Model.NgayNop.ToString("dd/MM/yyyy HH:mm")</h6>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4 mb-3">
        <label class="text-muted small">Từ ngày</label>
        <h6 data-ngay-bat-dau="@Model.NgayBatDau.ToString("yyyy-MM-dd")">
            <i class="bi bi-calendar-check me-2"></i>@Model.NgayBatDau.ToString("dd/MM/yyyy")
        </h6>
    </div>
    
    <div class="col-md-4 mb-3">
        <label class="text-muted small">Đến ngày</label>
        <h6 data-ngay-ket-thuc="@(Model.NgayKetThuc?.ToString("yyyy-MM-dd") ?? "")">
            @if (Model.NgayKetThuc.HasValue)
            {
                <i class="bi bi-calendar-x me-2"></i>@Model.NgayKetThuc.Value.ToString("dd/MM/yyyy")
            }
            else
            {
                <span class="text-muted">-</span>
            }
        </h6>
    </div>
    
    <div class="col-md-4 mb-3">
        <label class="text-muted small">Số ngày</label>
        <h6 data-so-ngay="@(Model.SoNgay?.ToString() ?? "")">
            @if (Model.SoNgay.HasValue)
            {
                <text><i class="bi bi-clock-history me-2"></i><strong class="text-primary">@Model.SoNgay.Value.ToString("0.#")</strong> ngày</text>
            }
            else
            {
                <span class="text-muted">-</span>
            }
        </h6>
    </div>
</div>

