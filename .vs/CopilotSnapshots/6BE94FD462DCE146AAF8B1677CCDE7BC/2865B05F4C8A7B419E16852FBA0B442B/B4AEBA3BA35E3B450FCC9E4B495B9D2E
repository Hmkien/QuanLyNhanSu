    </div>
</div>

@if (!string.IsNullOrEmpty(Model.TepDinhKem))
{
    <div class="mb-3">
        <label class="text-muted small">Tệp đính kèm</label>
        <div>
            <a href="@Model.TepDinhKem" target="_blank" class="btn btn-sm btn-outline-primary" data-tep-dinh-kem="@Model.TepDinhKem">
                <i class="bi bi-file-earmark-arrow-down me-2"></i>Tải xuống tệp đính kèm
            </a>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(Model.NguoiDuyet) || Model.NgayDuyet.HasValue)
{
    <hr />
    <h6 class="text-muted mb-3"><i class="bi bi-clipboard-check me-2"></i>Thông tin duyệt</h6>
    
    <div class="row">
        @if (!string.IsNullOrEmpty(Model.NguoiDuyet))
        {
            <div class="col-md-6 mb-3">
                <label class="text-muted small">Người duyệt</label>
                <h6><i class="bi bi-person-badge me-2"></i>@Model.NguoiDuyet</h6>
            </div>
        }
        
        @if (Model.NgayDuyet.HasValue)
        {
            <div class="col-md-6 mb-3">
                <label class="text-muted small">Ngày duyệt</label>
                <h6><i class="bi bi-calendar-check me-2"></i>@Model.NgayDuyet.Value.ToString("dd/MM/yyyy HH:mm")</h6>
            </div>
        }
    </div>
    
    @if (!string.IsNullOrEmpty(Model.GhiChu))
    {
        <div class="mb-3">
            <label class="text-muted small">Ghi chú</label>
            <div class="alert alert-info mb-0">
                <i class="bi bi-chat-left-text me-2"></i>@Model.GhiChu
            </div>
        </div>
    }
}

@if (canEdit || canApprove || canReject)
{
    <hr />
    <div class="d-flex gap-2 justify-content-end">
        @if (canEdit)
        {
            <button type="button" class="btn btn-primary" onclick="editFromDetail('@Model.Id')">
                <i class="bi bi-pen me-2"></i>Chỉnh sửa
            </button>
            <button type="button" class="btn btn-danger" onclick="deleteFromDetail('@Model.Id')">
                <i class="bi bi-trash me-2"></i>Xóa
            </button>
        }
        @if (canApprove)
        {
            <button type="button" class="btn btn-success" onclick="approveFromDetail('@Model.Id')">
                <i class="bi bi-check-circle me-2"></i>Duyệt
            </button>
        }
        @if (canReject)
        {
            <button type="button" class="btn btn-danger" onclick="rejectFromDetail('@Model.Id')">
                <i class="bi bi-x-circle me-2"></i>Từ chối
            </button>
        }
    </div>
}

<script>
    function editFromDetail(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        $("a[data-action='edit'][data-id='" + id + "']").trigger('click');
    }
    
    function deleteFromDetail(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        $("a[data-action='delete'][data-id='" + id + "']").trigger('click');
    }
    
    function approveFromDetail(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        $("a[data-action='approve'][data-id='" + id + "']").trigger('click');
    }
    
    function rejectFromDetail(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        $("a[data-action='reject'][data-id='" + id + "']").trigger('click');
    }
</script>
