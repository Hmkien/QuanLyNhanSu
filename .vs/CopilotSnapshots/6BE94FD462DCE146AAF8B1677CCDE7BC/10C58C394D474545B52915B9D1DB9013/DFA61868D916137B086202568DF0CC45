namespace QuanLyNhanLuc.Constants;

/// <summary>
/// Định nghĩa các vai trò trong hệ thống (đồng bộ với RoleType enum)
/// </summary>
public static class RoleNames
{
    // Các role chính từ RoleType enum
    public const string Admin = "Admin";
    public const string GiamDoc = "GiamDoc";
    public const string TruongPhong = "TruongPhong";
    public const string KeToan = "KeToan";
    public const string NhanVien = "NhanVien";
    public const string QuanLyNhanSu = "QuanLyNhanSu";

    /// <summary>
    /// Các vai trò có quyền quản lý nhân sự đầy đủ
    /// </summary>
    public const string QuanTriNhanSu = $"{Admin},{QuanLyNhanSu}";

    /// <summary>
    /// Các vai trò có quyền quản lý lương
    /// </summary>
    public const string QuanLyLuong = $"{Admin},{KeToan}";

    /// <summary>
    /// Các vai trò có quyền xem báo cáo
    /// </summary>
    public const string XemBaoCao = $"{Admin},{GiamDoc},{TruongPhong},{KeToan},{QuanLyNhanSu}";

    /// <summary>
    /// Các vai trò có quyền duyệt (trưởng phòng, kế toán, giám đốc)
    /// </summary>
    public const string NguoiDuyet = $"{TruongPhong},{KeToan},{GiamDoc},{Admin}";

    /// <summary>
    /// Các vai trò cấp cao (có quyền xem toàn bộ)
    /// </summary>
    public const string CapCao = $"{Admin},{GiamDoc},{QuanLyNhanSu}";
}

/// <summary>
/// Định nghĩa các Policy trong hệ thống
/// </summary>
public static class PolicyNames
{
    public const string RequireAdmin = "RequireAdmin";
    public const string RequireGiamDoc = "RequireGiamDoc";
    public const string RequireTruongPhong = "RequireTruongPhong";
    public const string RequireKeToan = "RequireKeToan";
    public const string RequireQuanLyNhanSu = "RequireQuanLyNhanSu";

    public const string QuanLyNhanSu = "QuanLyNhanSu";
    public const string QuanLyLuong = "QuanLyLuong";
    public const string XemBaoCao = "XemBaoCao";
    public const string NguoiDuyet = "NguoiDuyet";
    public const string CapCao = "CapCao";
}
