<!-- Modal Duyệt/Từ chối -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="approveModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="approveId" />
                <input type="hidden" id="approveAction" />
                <div class="mb-3">
                    <label class="form-label">Ghi chú</label>
                    <textarea id="ghiChu" class="form-control" rows="3" placeholder="Nhập ghi chú (không bắt buộc)..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" id="approveConfirmBtn" class="btn btn-primary">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            var deleteId = null;
            var today = new Date().toISOString().split('T')[0];

            // Đặt giá trị min cho date picker
            function setDateRestrictions() {
                var isHoiCo = $('#dangKyHoiCo').is(':checked');
                if (isHoiCo) {
                    $('#ngayBatDau').removeAttr('min');
                    $('#ngayKetThuc').removeAttr('min');
                } else {
                    $('#ngayBatDau').attr('min', today);
                    $('#ngayKetThuc').attr('min', today);
                }
            }

            $('#dangKyHoiCo').on('change', setDateRestrictions);

            // Tính số ngày tự động
            $('#ngayBatDau, #ngayKetThuc').on('change', function() {
                var start = $('#ngayBatDau').val();
                var end = $('#ngayKetThuc').val();
                if (start && end) {
                    var startDate = new Date(start);
                    var endDate = new Date(end);
                    if (endDate >= startDate) {
                        var diffTime = Math.abs(endDate - startDate);
                        var diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;
                        $('#soNgay').val(diffDays);
                    } else {
                        $('#soNgay').val('');
                        Notification.error('Ngày kết thúc phải sau ngày bắt đầu');
                    }
                }
            });

            // Create
            $("button[data-action='create']").on('click', function() {
                $('#formModalTitle').text('Đăng ký thủ tục hành chính');
                $('#thuTucForm')[0].reset();
                $('#thuTucId').val('');
                $('#dangKyHoiCo').prop('checked', false);
                $('#currentFile').html('');
                $('#formError').hide();
                setDateRestrictions();
                new bootstrap.Modal(document.getElementById('formModal')).show();
            });

            // Edit - Load data from server
            $(document).on('click', "a[data-action='edit']", function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $('#formModalTitle').text('Chỉnh sửa thủ tục');
                $('#formError').hide();
                $('#thuTucId').val(id);
                
                // Load chi tiết để lấy dữ liệu
                $.get('/ThuTucHanhChinh/GetChiTiet', { id: id }).done(function(html) {
                    var $html = $(html);
                    var loaiThuTuc = $html.find('[data-loai-thu-tuc]').data('loai-thu-tuc');
                    var ngayBatDau = $html.find('[data-ngay-bat-dau]').data('ngay-bat-dau');
                    var ngayKetThuc = $html.find('[data-ngay-ket-thuc]').data('ngay-ket-thuc');
                    var soNgay = $html.find('[data-so-ngay]').data('so-ngay');
                    var lyDo = $html.find('[data-ly-do]').text().trim();
                    var tepDinhKem = $html.find('[data-tep-dinh-kem]').attr('href');
                    
                    $('#loaiThuTuc').val(loaiThuTuc);
                    $('#ngayBatDau').val(ngayBatDau);
                    $('#ngayKetThuc').val(ngayKetThuc);
                    $('#soNgay').val(soNgay);
                    $('#lyDo').val(lyDo);
                    
                    if (tepDinhKem) {
                        $('#currentFile').html('<small class="text-muted">File hiện tại: <a href="' + tepDinhKem + '" target="_blank">Xem file</a></small>');
                    }
                    
                    new bootstrap.Modal(document.getElementById('formModal')).show();
                }).fail(function() {
                    Notification.error('Không thể tải thông tin thủ tục');
                });
            });

            // Save
            $('#saveBtn').on('click', function() {
                if (!$('#thuTucForm')[0].checkValidity()) {
                    $('#thuTucForm')[0].reportValidity();
                    return;
                }

                var formData = new FormData($('#thuTucForm')[0]);
                var id = $('#thuTucId').val();
                var url = id ? '/ThuTucHanhChinh/EditAjax' : '/ThuTucHanhChinh/CreateAjax';
                
                $(this).prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Đang lưu...');
                
                $.ajax({
                    url: url,
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(res) {
                        if (res.success) {
                            bootstrap.Modal.getInstance(document.getElementById('formModal')).hide();
                            Notification.successAndReload('Đã lưu thủ tục thành công');
                        } else {
                            $('#formError').text(res.message).show();
                            Notification.error(res.message);
                            $('#saveBtn').prop('disabled', false).html('<i class="bi bi-save me-2"></i>Lưu');
                        }
                    },
                    error: function() {
                        $('#formError').text('Có lỗi xảy ra').show();
                        Notification.error('Có lỗi xảy ra');
                        $('#saveBtn').prop('disabled', false).html('<i class="bi bi-save me-2"></i>Lưu');
                    }
                });
            });

            // View detail
            $(document).on('click', "a[data-action='view']", function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $('#detailBody').html('<div class="text-center py-4"><div class="spinner-border text-primary"></div><p class="mt-2 text-muted">Đang tải...</p></div>');
                var modal = new bootstrap.Modal(document.getElementById('detailModal'));
                modal.show();
                
                $.get('/ThuTucHanhChinh/GetChiTiet', { id: id }).done(function(html) {
                    $('#detailBody').html(html);
                }).fail(function() {
                    $('#detailBody').html('<div class="alert alert-danger">Có lỗi xảy ra khi tải dữ liệu</div>');
                });
            });

            // Delete
            $(document).on('click', "a[data-action='delete']", function(e) {
                e.preventDefault();
                deleteId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            });

            $('#deleteConfirmBtn').on('click', function() {
                if (!deleteId) return;
                $(this).prop('disabled', true).text('Đang xóa...');
                
                $.post('/ThuTucHanhChinh/DeleteAjax', { id: deleteId })
                    .done(function(res) {
                        bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                        if (res.success) {
                            Notification.successAndReload('Đã xóa thủ tục thành công');
                        } else {
                            Notification.error(res.message);
                            $('#deleteConfirmBtn').prop('disabled', false).text('Xóa');
                        }
                    })
                    .fail(function() {
                        bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                        Notification.error('Có lỗi xảy ra');
                        $('#deleteConfirmBtn').prop('disabled', false).text('Xóa');
                    });
            });

            // Approve
            $(document).on('click', "a[data-action='approve']", function(e) {
                e.preventDefault();
                $('#approveModalTitle').html('<i class="bi bi-check-circle text-success me-2"></i>Duyệt thủ tục');
                $('#approveId').val($(this).data('id'));
                $('#approveAction').val('approve');
                $('#ghiChu').val('');
                $('#approveConfirmBtn').removeClass('btn-danger').addClass('btn-success').text('Duyệt');
                new bootstrap.Modal(document.getElementById('approveModal')).show();
            });

            // Reject
            $(document).on('click', "a[data-action='reject']", function(e) {
                e.preventDefault();
                $('#approveModalTitle').html('<i class="bi bi-x-circle text-danger me-2"></i>Từ chối thủ tục');
                $('#approveId').val($(this).data('id'));
                $('#approveAction').val('reject');
                $('#ghiChu').val('');
                $('#approveConfirmBtn').removeClass('btn-success').addClass('btn-danger').text('Từ chối');
                new bootstrap.Modal(document.getElementById('approveModal')).show();
            });

            $('#approveConfirmBtn').on('click', function() {
                var id = $('#approveId').val();
                var action = $('#approveAction').val();
                var ghiChu = $('#ghiChu').val();
                var url = action === 'approve' ? '/ThuTucHanhChinh/ApproveAjax' : '/ThuTucHanhChinh/RejectAjax';
                
                $(this).prop('disabled', true).text('Đang xử lý...');
                
                $.post(url, { id: id, ghiChu: ghiChu }).done(function(res) {
                    bootstrap.Modal.getInstance(document.getElementById('approveModal')).hide();
                    if (res.success) {
                        var msg = action === 'approve' ? 'Đã duyệt thủ tục thành công' : 'Đã từ chối thủ tục';
                        Notification.successAndReload(msg);
                    } else {
                        Notification.error(res.message);
                        $('#approveConfirmBtn').prop('disabled', false).text(action === 'approve' ? 'Duyệt' : 'Từ chối');
                    }
                }).fail(function() {
                    Notification.error('Có lỗi xảy ra');
                    bootstrap.Modal.getInstance(document.getElementById('approveModal')).hide();
                    $('#approveConfirmBtn').prop('disabled', false).text(action === 'approve' ? 'Duyệt' : 'Từ chối');
                });
            });
        });
    </script>
}
