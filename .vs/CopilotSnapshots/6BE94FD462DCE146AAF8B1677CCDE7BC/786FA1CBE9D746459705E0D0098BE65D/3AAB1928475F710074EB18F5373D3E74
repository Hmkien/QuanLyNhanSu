@model IEnumerable<QuanLyNhanLuc.Models.Entities.ThuTucHanhChinh>
@using QuanLyNhanLuc.Models.Enums
@using QuanLyNhanLuc.Helpers
@using QuanLyNhanLuc.Extensions

@{
    ViewData["Title"] = "Thủ tục hành chính";
    var canCreate = ViewBag.CanCreate ?? false;
    var canApprove = ViewBag.CanApprove ?? false;
    var isTruongPhong = ViewBag.IsTruongPhong ?? false;
    var isKeToan = ViewBag.IsKeToan ?? false;
    var isGiamDoc = ViewBag.IsGiamDoc ?? false;
    var isAdmin = ViewBag.IsAdmin ?? false;
    var currentNhanSuId = ViewBag.CurrentNhanSuId as Guid?;
}

<style>
    .status-badge { 
        padding: 6px 12px; 
        border-radius: 20px; 
        font-size: 12px; 
        font-weight: 500; 
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }
    .status-nopdon { background-color: #e3f2fd; color: #1565c0; }
    .status-truongphong { background-color: #fff3cd; color: #856404; }
    .status-ketoan { background-color: #d1ecf1; color: #0c5460; }
    .status-giamdoc { background-color: #e8daef; color: #6c3483; }
    .status-hoanthanh { background-color: #d4edda; color: #155724; }
    .status-tuchoi { background-color: #f8d7da; color: #721c24; }
    .clickable-name { cursor: pointer; color: #0d6efd; text-decoration: none; }
    .clickable-name:hover { text-decoration: underline; }
</style>

<div class="row mb-3 align-items-center">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb custom-breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/" class="text-decoration-none text-secondary"><i class="bi bi-house-door"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a class="text-decoration-none text-secondary">Quản lý</a>
                </li>
                <li class="breadcrumb-item active text-primary" aria-current="page">Thủ tục hành chính</li>
            </ol>
        </nav>
    </div>
</div>

<div class="d-flex justify-content-between gap-4 mb-4">
    <h2 class="text-primary">Thủ tục hành chính</h2>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary"><i class="bi bi-file-earmark-excel me-2"></i>Xuất Excel</button>
        @if (canCreate)
        {
            <button class="btn btn-primary" data-action="create"><i class="fas fa-plus me-2"></i>Đăng ký thủ tục</button>
        }
    </div>
</div>

<!-- Search Form -->
<div class="mb-3">
    <form method="get" asp-action="Index" class="row g-2 align-items-center">
        <div class="col-md-3">
            <div class="input-group input-group-sm">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" name="search" class="form-control" placeholder="Tìm kiếm họ tên, mã thủ tục..." value="@ViewBag.Search" />
            </div>
        </div>
        <div class="col-md-2">
            <select name="loaiThuTuc" class="form-select form-select-sm">
                <option value="">-- Loại thủ tục --</option>
                @foreach (LoaiThuTuc type in Enum.GetValues<LoaiThuTuc>())
                {
                    <option value="@((int)type)" selected="@(ViewBag.LoaiThuTuc == (int)type)">@EnumHelper.GetEnumDescription(type)</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <select name="trangThai" class="form-select form-select-sm">
                <option value="">-- Trạng thái --</option>
                @foreach (TrangThaiThuTuc status in Enum.GetValues<TrangThaiThuTuc>())
                {
                    <option value="@((int)status)" selected="@(ViewBag.TrangThai == (int)status)">@EnumHelper.GetEnumDescription(status)</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-search me-1"></i>Tìm kiếm</button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-clockwise me-1"></i>Làm mới</a>
        </div>
    </form>
</div>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>STT</th>
            <th>Mã thủ tục</th>
            <th>Họ tên</th>
            <th>Phòng ban</th>
            <th>Loại thủ tục</th>
            <th>Ngày nộp</th>
            <th>Từ ngày</th>
            <th>Đến ngày</th>
            <th>Số ngày</th>
            <th>Trạng thái</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{ var stt = 1; }
        @foreach (var item in Model)
        {
            var canEdit = item.TrangThai == TrangThaiThuTuc.NopDon && item.NhanSuId == currentNhanSuId;
            var canApproveThis = (isTruongPhong && item.TrangThai == TrangThaiThuTuc.NopDon) ||
                                 (isKeToan && item.TrangThai == TrangThaiThuTuc.TruongPhongDuyet) ||
                                 (isGiamDoc && item.TrangThai == TrangThaiThuTuc.KeToanDuyet) ||
                                 isAdmin;
            
            <tr>
                <td>@stt</td>
                <td><span>@item.MaThuTuc</span></td>
                <td>
                    <a class="text-primary text-decoration-none" href="javascript:void(0)"  data-action="view" data-id="@item.Id">
                       @item.NhanSu.HoVaTen
                    </a>
                </td>
                <td>@(item.NhanSu.PhongBan?.TenPhongBan ?? "-")</td>
                <td>@EnumHelper.GetEnumDescription(item.LoaiThuTuc)</td>
                <td>@item.NgayNop.ToString("dd/MM/yyyy")</td>
                <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                <td>@(item.NgayKetThuc?.ToString("dd/MM/yyyy") ?? "-")</td>
                <td class="text-center">@(item.SoNgay?.ToString("0.#") ?? "-")</td>
                <td>
                    @if (item.TrangThai == TrangThaiThuTuc.NopDon)
                    {
                        <span class="status-badge status-nopdon">@EnumHelper.GetEnumDescription(item.TrangThai)</span>
                    }
                    else if (item.TrangThai == TrangThaiThuTuc.TruongPhongDuyet)
                    {
                        <span class="status-badge status-truongphong">@EnumHelper.GetEnumDescription(item.TrangThai)</span>
                    }
                    else if (item.TrangThai == TrangThaiThuTuc.KeToanDuyet)
                    {
                        <span class="status-badge status-ketoan">@EnumHelper.GetEnumDescription(item.TrangThai)</span>
                    }
                    else if (item.TrangThai == TrangThaiThuTuc.HoanThanh)
                    {
                        <span class="status-badge status-hoanthanh">@EnumHelper.GetEnumDescription(item.TrangThai)</span>
                    }
                    else
                    {
                        <span class="status-badge status-tuchoi">@EnumHelper.GetEnumDescription(item.TrangThai)</span>
                    }
                </td>
                <td class="text-center">
                    @if (canEdit)
                    {
                        <a href="javascript:void(0)" data-action="edit" data-id="@item.Id" title="Sửa" class="me-2">
                            <i class="bi bi-pen text-primary"></i>
                        </a>
                        <a href="javascript:void(0)" data-action="delete" data-id="@item.Id" title="Xóa">
                            <i class="bi bi-trash text-danger"></i>
                        </a>
                    }
                    else if (canApproveThis)
                    {
                        <a href="javascript:void(0)" data-action="approve" data-id="@item.Id" title="Duyệt" class="me-2">
                            <i class="bi bi-check-circle text-success"></i>
                        </a>
                        <a href="javascript:void(0)" data-action="reject" data-id="@item.Id" title="Từ chối">
                            <i class="bi bi-x-circle text-danger"></i>
                        </a>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
            </tr>
            stt++;
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="11" class="text-center text-muted">Không có dữ liệu</td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-primary">Tổng số bản ghi: @(ViewBag.TotalItems ?? Model.Count())</span>
    @if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
    {
        <nav>
            <ul class="pagination pagination-sm mb-0">
                @{
                    int current = ViewBag.CurrentPage;
                    int total = ViewBag.TotalPages;
                    string search = ViewBag.Search ?? "";
                    int? loaiThuTuc = ViewBag.LoaiThuTuc;
                    int? trangThai = ViewBag.TrangThai;
                }
                <li class="page-item @(current == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = current - 1, pageSize = ViewBag.PageSize, search, loaiThuTuc, trangThai })">«</a>
                </li>
                @for (int i = 1; i <= total; i++)
                {
                    <li class="page-item @(i == current ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize, search, loaiThuTuc, trangThai })">@i</a>
                    </li>
                }
                <li class="page-item @(current == total ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = current + 1, pageSize = ViewBag.PageSize, search, loaiThuTuc, trangThai })">»</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Modal Form Thêm/Sửa -->
<div class="modal fade" id="formModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="thuTucForm" enctype="multipart/form-data">
                    <input type="hidden" id="thuTucId" name="id" />
                    
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label class="form-label">Loại thủ tục <span class="text-danger">*</span></label>
                            <select id="loaiThuTuc" name="loaiThuTuc" class="form-select" required>
                                <option value="">-- Chọn loại --</option>
                                @foreach (LoaiThuTuc type in Enum.GetValues<LoaiThuTuc>())
                                {
                                    <option value="@((int)type)">@EnumHelper.GetEnumDescription(type)</option>
                                }
                            </select>
                        </div>
                        
                        <div class="col-md-4 mb-3 d-flex align-items-end">
                            <div class="form-check">
                                <input type="checkbox" id="dangKyHoiCo" class="form-check-input" />
                                <label class="form-check-label" for="dangKyHoiCo">
                                    <strong>Đăng ký hồi cố</strong><br/>
                                    <small class="text-muted">(Cho phép chọn ngày quá khứ)</small>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Từ ngày <span class="text-danger">*</span></label>
                            <input type="date" id="ngayBatDau" name="ngayBatDau" class="form-control" required />
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Đến ngày</label>
                            <input type="date" id="ngayKetThuc" name="ngayKetThuc" class="form-control" />
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Số ngày</label>
                            <input type="number" id="soNgay" name="soNgay" class="form-control" step="0.5" readonly />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Lý do <span class="text-danger">*</span></label>
                        <textarea id="lyDo" name="lyDo" class="form-control" rows="3" required placeholder="Nhập lý do đăng ký thủ tục..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tệp đính kèm</label>
                        <input type="file" id="tepDinhKem" name="tepDinhKem" class="form-control" 
                               accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png" />
                        <small class="text-muted">Hỗ trợ: PDF, Word, Excel, Ảnh (tối đa 5MB)</small>
                        <div id="currentFile" class="mt-2"></div>
                    </div>

                    <div class="text-danger" id="formError" style="display:none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="saveBtn" class="btn btn-primary">
                    <i class="bi bi-save me-2"></i>Lưu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Chi tiết -->
<div class="modal fade" id="detailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-info-circle me-2"></i>Chi tiết thủ tục hành chính</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="detailBody">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 text-muted">Đang tải...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
