@model IEnumerable<QuanLyNhanLuc.Models.Entities.ChucVu>
@using QuanLyNhanLuc.Models.Enums

@{
    ViewData["Title"] = "Chức vụ";
}

<style>
    .status-badge { padding: 4px 8px; border-radius: 12px; font-size: 12px; }
    .status-approved { background-color: #d4edda; color: #155724; }
    .status-pending { background-color: #fff3cd; color: #856404; }
    .status-rejected { background-color: #f8d7da; color: #721c24; }
</style>

<div class="row mb-3 align-items-center">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb custom-breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/" class="text-decoration-none text-secondary"><i class="bi bi-house-door"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a class="text-decoration-none text-secondary">Danh mục</a>
                </li>
                <li class="breadcrumb-item active text-primary" aria-current="page">Chức vụ</li>
            </ol>
        </nav>
    </div>
</div>

<div class="d-flex justify-content-between gap-4 mb-4">
<h2 class="text-primary">Chức vụ</h2>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary"><i class="bi bi-file-earmark-excel me-2"></i>Xuất Excel</button>
        <button class="btn btn-primary" data-action="create"><i class="fas fa-plus me-2"></i>Thêm mới</button>
    </div>
</div>

<!-- Search Form -->
<div class=" mb-3">
        <form method="get" asp-action="Index" class="row g-2 align-items-center">
            <div class="col-md-4">
                <div class="input-group input-group-sm">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm chức vụ..." value="@ViewBag.Search" />
                </div>
            </div>
            <div class="col-md-3">
                <select name="status" class="form-select form-select-sm">
                    <option value="">-- Tất cả trạng thái --</option>
                    <option value="0" selected="@(ViewBag.Status == 0)">Đã duyệt</option>
                    <option value="1" selected="@(ViewBag.Status == 1)">Chờ duyệt</option>
                    <option value="3" selected="@(ViewBag.Status == 3)">Huỷ duyệt</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary btn-sm"><i class="bi bi-search me-1"></i>Tìm kiếm</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-clockwise me-1"></i>Làm mới</a>
            </div>
        </form>
</div>

<table class="table table-bordered table-hover">
<thead>
    <tr>
        <th>STT</th>
        <th>Mã chức vụ</th>
        <th>Tên chức vụ</th>
        <th>Mô tả</th>
        <th>Trạng thái</th>
        <th class="text-center">Hành động</th>
    </tr>
</thead>
<tbody>
    @{ var stt = 1; }
    @foreach (var item in Model)
    {
        <tr>
            <td>@stt</td>
            <td><span class="badge bg-secondary">@item.ChucVuCode</span></td>
            <td>@item.TenChucVu</td>
            <td>@item.MoTa</td>
            <td>
                    @if (item.Status == Status.Approved)
                    {
                        <span class="status-badge status-approved">Đã duyệt</span>
                    }
                    else if (item.Status == Status.Pending)
                    {
                        <span class="status-badge status-pending">Chờ duyệt</span>
                    }
                    else
                    {
                        <span class="status-badge status-rejected">Huỷ duyệt</span>
                    }
                </td>
                <td class="text-center">
                    @if (item.Status == Status.Approved)
                    {
                        <a href="javascript:void(0)" data-action="reject" data-id="@item.Id" title="Huỷ duyệt">
                            <i class="bi bi-x-circle text-warning"></i>
                        </a>
                    }
                    else
                    {
                        <a href="javascript:void(0)" data-action="approve" data-id="@item.Id" title="Duyệt" class="me-2">
                            <i class="bi bi-check-circle text-success"></i>
                        </a>
                        <a href="javascript:void(0)" data-action="edit" data-id="@item.Id" title="Sửa" class="me-2">
                            <i class="bi bi-pen text-primary"></i>
                        </a>
                        <a href="javascript:void(0)" data-action="delete" data-id="@item.Id" title="Xóa">
                            <i class="bi bi-trash text-danger"></i>
                        </a>
                    }
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-3">
    <span class="text-primary">Tổng số bản ghi: @(ViewBag.TotalItems ?? Model.Count())</span>
    @if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
    {
        <nav>
            <ul class="pagination pagination-sm mb-0">
                @{ 
                    int current = ViewBag.CurrentPage; 
                    int total = ViewBag.TotalPages; 
                    string search = ViewBag.Search ?? "";
                    int? status = ViewBag.Status;
                }
                <li class="page-item @(current == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = current - 1, pageSize = ViewBag.PageSize, search = search, status = status })">«</a>
                </li>
                @for (int i = 1; i <= total; i++)
                {
                    <li class="page-item @(i == current ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize, search = search, status = status })">@i</a>
                    </li>
                }
                <li class="page-item @(current == total ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = current + 1, pageSize = ViewBag.PageSize, search = search, status = status })">»</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Modals -->
<div class="modal fade" id="chucVuModal" tabindex="-1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="chucVuModalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="chucVuForm">
                    <input type="hidden" id="chucVuId" name="id" />
                    <div class="mb-3">
                        <label class="form-label">Mã chức vụ <span class="text-danger">*</span></label>
                        <input id="chucVuCode" name="chucVuCode" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tên chức vụ <span class="text-danger">*</span></label>
                        <input id="chucVuName" name="tenChucVu" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea id="chucVuMoTa" name="moTa" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="text-danger" id="chucVuError" style="display:none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" id="chucVuSaveBtn" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xóa -->
<div class="modal fade" id="chucVuDeleteModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" id="chucVuDeleteConfirmBtn" class="btn btn-danger">Xóa</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            var deleteId = null;

            // Create
            $("button[data-action='create']").on('click', function() {
                $('#chucVuModalTitle').text('Thêm chức vụ');
                $('#chucVuForm')[0].reset();
                $('#chucVuId').val('');
                $('#chucVuCode').prop('readonly', false);
                $('#chucVuError').hide();
                new bootstrap.Modal(document.getElementById('chucVuModal')).show();
            });

            // Edit
            $(document).on('click', "a[data-action='edit']", function() {
                var id = $(this).data('id');
                $('#chucVuModalTitle').text('Chỉnh sửa chức vụ');
                $('#chucVuError').hide();
                $.get('/ChucVu/GetChucVu', { id: id }).done(function(res) {
                    $('#chucVuId').val(res.id);
                    $('#chucVuCode').val(res.chucVuCode).prop('readonly', true);
                    $('#chucVuName').val(res.ten);
                    $('#chucVuMoTa').val(res.moTa);
                    new bootstrap.Modal(document.getElementById('chucVuModal')).show();
                }).fail(function() {
                    Notification.error('Không thể tải thông tin chức vụ');
                });
            });

            // Save (create/edit)
            $('#chucVuSaveBtn').on('click', function() {
                var id = $('#chucVuId').val();
                var code = $('#chucVuCode').val();
                var name = $('#chucVuName').val();
                var moTa = $('#chucVuMoTa').val();
                
                if (!code || code.trim() === '') {
                    $('#chucVuError').text('Mã chức vụ không được để trống').show();
                    return;
                }
                
                if (!name || name.trim() === '') {
                    $('#chucVuError').text('Tên chức vụ không được để trống').show();
                    return;
                }
                
                var url = id ? '/ChucVu/EditAjax' : '/ChucVu/CreateAjax';
                var action = id ? 'cập nhật' : 'thêm mới';
                
                $.post(url, $('#chucVuForm').serialize()).done(function(res) {
                    if (res.success) {
                        Notification.successAndReload('Đã ' + action + ' chức vụ thành công');
                    } else { 
                        $('#chucVuError').text(res.message).show();
                        Notification.error(res.message || 'Có lỗi xảy ra khi ' + action);
                    }
                }).fail(function() { 
                    $('#chucVuError').text('Có lỗi xảy ra').show();
                    Notification.error('Có lỗi xảy ra');
                });
            });

            // Delete - cần modal xác nhận
            $(document).on('click', "a[data-action='delete']", function() {
                deleteId = $(this).data('id');
                new bootstrap.Modal(document.getElementById('chucVuDeleteModal')).show();
            });
            
            $('#chucVuDeleteConfirmBtn').on('click', function() {
                if (!deleteId) return;
                
                $(this).prop('disabled', true).text('Đang xóa...');
                
                $.post('/ChucVu/DeleteAjax', { id: deleteId })
                    .done(function(res) {
                        var modalInstance = bootstrap.Modal.getInstance(document.getElementById('chucVuDeleteModal'));
                        if (modalInstance) modalInstance.hide();
                        
                        if (res.success) {
                            Notification.successAndReload('Đã xóa chức vụ thành công');
                        } else {
                            Notification.error(res.message || 'Có lỗi xảy ra khi xóa');
                            $('#chucVuDeleteConfirmBtn').prop('disabled', false).text('Xóa');
                        }
                    })
                    .fail(function() {
                        var modalInstance = bootstrap.Modal.getInstance(document.getElementById('chucVuDeleteModal'));
                        if (modalInstance) modalInstance.hide();
                        Notification.error('Có lỗi xảy ra khi xóa');
                        $('#chucVuDeleteConfirmBtn').prop('disabled', false).text('Xóa');
                    });
            });

            // Approve - không cần confirm
            $(document).on('click', "a[data-action='approve']", function() {
                var id = $(this).data('id');
                $.post('/ChucVu/ApproveAjax', { id: id }).done(function(res) {
                    if (res.success) {
                        Notification.successAndReload('Đã duyệt chức vụ thành công');
                    } else {
                        Notification.error(res.message || 'Có lỗi xảy ra khi duyệt');
                    }
                }).fail(function() {
                    Notification.error('Có lỗi xảy ra khi duyệt');
                });
            });

            // Reject - không cần confirm
            $(document).on('click', "a[data-action='reject']", function() {
                var id = $(this).data('id');
                $.post('/ChucVu/RejectAjax', { id: id }).done(function(res) {
                    if (res.success) {
                        Notification.successAndReload('Đã huỷ duyệt chức vụ');
                    } else {
                        Notification.error(res.message || 'Có lỗi xảy ra khi huỷ duyệt');
                    }
                }).fail(function() {
                    Notification.error('Có lỗi xảy ra khi huỷ duyệt');
                });
            });
                    });
                </script>
            }
