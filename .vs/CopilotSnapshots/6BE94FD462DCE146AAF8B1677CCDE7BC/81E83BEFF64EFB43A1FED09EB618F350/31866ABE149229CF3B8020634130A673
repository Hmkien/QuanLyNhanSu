@model QuanLyNhanLuc.Models.Entities.ThuTucHanhChinh
@using QuanLyNhanLuc.Helpers

@{
    var canEdit = ViewBag.CanEdit ?? false;
    var canApprove = ViewBag.CanApprove ?? false;
    var canReject = ViewBag.CanReject ?? false;
}

<div class="row">
    <div class="col-md-6 mb-3">
        <label class="text-muted small">Mã thủ tục</label>
        <h6 class="fw-bold">@Model.MaThuTuc</h6>
    </div>
    
    <div class="col-md-6 mb-3">
        <label class="text-muted small">Trạng thái</label>
        <h6>
            @if (Model.TrangThai == QuanLyNhanLuc.Models.Enums.TrangThaiThuTuc.NopDon)
            {
                <span class="badge bg-info">@EnumHelper.GetEnumDescription(Model.TrangThai)</span>
            }
            else if (Model.TrangThai == QuanLyNhanLuc.Models.Enums.TrangThaiThuTuc.TruongPhongDuyet)
            {
                <span class="badge bg-warning text-dark">@EnumHelper.GetEnumDescription(Model.TrangThai)</span>
            }
            else if (Model.TrangThai == QuanLyNhanLuc.Models.Enums.TrangThaiThuTuc.KeToanDuyet)
            {
                <span class="badge bg-primary">@EnumHelper.GetEnumDescription(Model.TrangThai)</span>
            }
            else if (Model.TrangThai == QuanLyNhanLuc.Models.Enums.TrangThaiThuTuc.HoanThanh)
            {
                <span class="badge bg-success">@EnumHelper.GetEnumDescription(Model.TrangThai)</span>
            }
            else
            {
                <span class="badge bg-danger">@EnumHelper.GetEnumDescription(Model.TrangThai)</span>
            }
        </h6>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-6 mb-3">
        <label class="text-muted small">Họ tên nhân viên</label>
        <h6 class="fw-bold"><i class="bi bi-person-circle me-2"></i>@Model.NhanSu.HoTen</h6>
    </div>
    
    <div class="col-md-6 mb-3">
        <label class="text-muted small">Phòng ban</label>
        <h6>@(Model.NhanSu.PhongBan?.TenPhongBan ?? "-")</h6>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label class="text-muted small">Loại thủ tục</label>
        <h6 data-loai-thu-tuc="@((int)Model.LoaiThuTuc)">
            <span class="badge bg-secondary">@EnumHelper.GetEnumDescription(Model.LoaiThuTuc)</span>
        </h6>
    </div>
    
    <div class="col-md-6 mb-3">
        <label class="text-muted small">Ngày nộp</label>
        <h6><i class="bi bi-calendar-event me-2"></i>@Model.NgayNop.ToString("dd/MM/yyyy HH:mm")</h6>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4 mb-3">
        <label class="text-muted small">Từ ngày</label>
        <h6 data-ngay-bat-dau="@Model.NgayBatDau.ToString("yyyy-MM-dd")">
            <i class="bi bi-calendar-check me-2"></i>@Model.NgayBatDau.ToString("dd/MM/yyyy")
        </h6>
    </div>
    
    <div class="col-md-4 mb-3">
        <label class="text-muted small">Đến ngày</label>
        <h6 data-ngay-ket-thuc="@(Model.NgayKetThuc?.ToString("yyyy-MM-dd") ?? "")">
            @if (Model.NgayKetThuc.HasValue)
            {
                <i class="bi bi-calendar-x me-2"></i>@Model.NgayKetThuc.Value.ToString("dd/MM/yyyy")
            }
            else
            {
                <span class="text-muted">-</span>
            }
        </h6>
    </div>
    
    <div class="col-md-4 mb-3">
        <label class="text-muted small">Số ngày</label>
        <h6 data-so-ngay="@(Model.SoNgay?.ToString() ?? "")">
            @if (Model.SoNgay.HasValue)
            {
                <i class="bi bi-clock-history me-2"></i><strong class="text-primary">@Model.SoNgay.Value.ToString("0.#")</strong> ngày
            }
            else
            {
                <span class="text-muted">-</span>
            }
        </h6>
    </div>
</div>

<div class="mb-3">
    <label class="text-muted small">Lý do</label>
    <div class="p-3 bg-light border rounded">
        <p class="mb-0" data-ly-do>@Model.LyDo</p>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.TepDinhKem))
{
    <div class="mb-3">
        <label class="text-muted small">Tệp đính kèm</label>
        <div>
            <a href="@Model.TepDinhKem" target="_blank" class="btn btn-sm btn-outline-primary" data-tep-dinh-kem="@Model.TepDinhKem">
                <i class="bi bi-file-earmark-arrow-down me-2"></i>Tải xuống tệp đính kèm
            </a>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(Model.NguoiDuyet) || Model.NgayDuyet.HasValue)
{
    <hr />
    <h6 class="text-muted mb-3"><i class="bi bi-clipboard-check me-2"></i>Thông tin duyệt</h6>
    
    <div class="row">
        @if (!string.IsNullOrEmpty(Model.NguoiDuyet))
        {
            <div class="col-md-6 mb-3">
                <label class="text-muted small">Người duyệt</label>
                <h6><i class="bi bi-person-badge me-2"></i>@Model.NguoiDuyet</h6>
            </div>
        }
        
        @if (Model.NgayDuyet.HasValue)
        {
            <div class="col-md-6 mb-3">
                <label class="text-muted small">Ngày duyệt</label>
                <h6><i class="bi bi-calendar-check me-2"></i>@Model.NgayDuyet.Value.ToString("dd/MM/yyyy HH:mm")</h6>
            </div>
        }
    </div>
    
    @if (!string.IsNullOrEmpty(Model.GhiChu))
    {
        <div class="mb-3">
            <label class="text-muted small">Ghi chú</label>
            <div class="alert alert-info mb-0">
                <i class="bi bi-chat-left-text me-2"></i>@Model.GhiChu
            </div>
        </div>
    }
}

@if (canEdit || canApprove || canReject)
{
    <hr />
    <div class="d-flex gap-2 justify-content-end">
        @if (canEdit)
        {
            <button type="button" class="btn btn-primary" onclick="editFromDetail('@Model.Id')">
                <i class="bi bi-pen me-2"></i>Chỉnh sửa
            </button>
            <button type="button" class="btn btn-danger" onclick="deleteFromDetail('@Model.Id')">
                <i class="bi bi-trash me-2"></i>Xóa
            </button>
        }
        @if (canApprove)
        {
            <button type="button" class="btn btn-success" onclick="approveFromDetail('@Model.Id')">
                <i class="bi bi-check-circle me-2"></i>Duyệt
            </button>
        }
        @if (canReject)
        {
            <button type="button" class="btn btn-danger" onclick="rejectFromDetail('@Model.Id')">
                <i class="bi bi-x-circle me-2"></i>Từ chối
            </button>
        }
    </div>
}

<script>
    function editFromDetail(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        $("a[data-action='edit'][data-id='" + id + "']").trigger('click');
    }
    
    function deleteFromDetail(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        $("a[data-action='delete'][data-id='" + id + "']").trigger('click');
    }
    
    function approveFromDetail(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        $("a[data-action='approve'][data-id='" + id + "']").trigger('click');
    }
    
    function rejectFromDetail(id) {
        bootstrap.Modal.getInstance(document.getElementById('detailModal')).hide();
        $("a[data-action='reject'][data-id='" + id + "']").trigger('click');
    }
</script>
